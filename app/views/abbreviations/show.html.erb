<%- page_title %>
<div class="container">
  <%= breadcrumbs %>
  <%= form_title %>
  <div class="form-horizontal" role="form">
    <%= form_for @abbreviation do |a| %>
      <%= render partial: 'shared/notice' %>
      <div class="form-group">
        <%= a.label :id, class: "col-sm-3 control-label" %>
        <div class="col-sm-1">
          <%= a.text_field :id, class: "form-control", readonly: true %>
        </div>
      </div>
      <div class="form-group">
        <%= a.label :code, class: "col-sm-3 control-label" %>
        <div class="col-sm-2">
          <%= a.text_field :code, class: "form-control",  readonly: true %>
        </div>
      </div>
      <div class="form-group">
        <%= a.label :description, class: "col-sm-3 control-label" %>
        <div class="col-sm-6">
          <%= a.text_field :description, class: "form-control",  readonly: true %>
        </div>
      </div>
      <div class="form-group">
        <%= a.label :sort_code, class: "col-sm-3 control-label" %>
        <div class="col-sm-2">
          <%= a.text_field :sort_code, class: "form-control",  readonly: true %>
        </div>
      </div>
      <div class="form-group">
        <div class="col-sm-offset-3 col-sm-2">
          <%= link_to t( 'button_label.edit' ), edit_abbreviation_path( @abbreviation ), class: "btn btn-lg btn-block btn-default" %>
        </div>
        <div class="col-sm-2">
          <%= link_to t( 'button_label.goto_to_list' ), abbreviations_path, class: "btn btn-lg btn-block btn-default" %>
        </div>
      </div>
    <% end %>
  </div>
</div>
