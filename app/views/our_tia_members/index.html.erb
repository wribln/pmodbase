<%- page_title %>
<div class="container">
  <%= breadcrumbs %>
  <%= form_title_w_link( @tia_list.label, my_tia_lists_path ) %>
  <div class="table-responsive col-sm-7">
    <table class="table table-striped table-bordered">
      <thead>
        <tr>
          <th class="col-sm-2"><%= TiaMember.human_attribute_name( :account_id   ) %></th>
          <th class="col-sm-2"><%= TiaMember.human_attribute_name( :to_access ) %></th>
          <th class="col-sm-2"><%= TiaMember.human_attribute_name( :to_update ) %></th>
          <th class="col-sm-1 hidden-print"><%= t( 'action_title.header' )%></th>
        </tr>
      </thead>
      <tbody>
      <%- if @tia_members.empty? then %>
        <%= render partial: 'shared/index_empty_row', locals:{ columns: 3, with_link: true }%>
      <%- else %>
        <%- @tia_members.each do |tia_member| %>
          <tr>
            <td><%= link_to tia_member.account.user_name, contact_list_path( tia_member.account.person ) unless tia_member.account_id.nil?   %></td>
            <td><%= display_boolean tia_member.to_access %></td>
            <td><%= display_boolean tia_member.to_update %></td>
            <td><%= render partial: 'shared/actions', object: tia_member %></td>
          </tr>
        <%- end %>
      <%- end %>
      </tbody>
    </table>
    <%= render partial: 'shared/footer' %>
  </div>
</div>
