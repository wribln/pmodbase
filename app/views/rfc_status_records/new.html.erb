<%- page_title %>
<div class="container">
  <%= breadcrumbs %>
  <%= form_title %>
  <div class="form-horizontal" role="form">
    <%= form_for @rfc_status_record do |f| %>
      <%= render partial: 'shared/errors', object: @rfc_status_record.errors %>
      <div class="form-group">
        <%= f.label :id, class: 'col-sm-3 control-label' %>
        <div class="col-sm-2">
          <%= display_value f.object.to_id %>
        </div>
      </div>
      <div class="form-group">
        <%= f.label :rfc_type, class: 'col-sm-3 control-label' %>
        <div class="col-sm-2">
          <%= f.select :rfc_type, @workflow.workflow_labels_for_select( @allowed_workflows ), { prompt: t( '.g_prompt' )}, { class: 'form-control', required: true } %>
        </div>
      </div>
      <div class="form-group">
        <div class="col-sm-offset-3 col-sm-2">
          <%= f.submit class: 'btn btn-lg btn-block btn-primary' %>
        </div>
        <div class="col-sm-2">
          <%= link_to t( 'button_label.cancel_to_show' ), rfc_status_records_path, class: 'btn btn-lg btn-block btn-default' %>
        </div>
      <div>
    <% end %>
  </div>
</div>
