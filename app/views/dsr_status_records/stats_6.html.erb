<%- page_title %>
<div class="container">
  <%= breadcrumbs %>
  <%= form_title_w_sub_title t('dsr_status_records.sub_title', stats_date: db_formatted_dt( Time.now ))%>
  <div class="table-responsive col-sm-7">
    <table class="table table-striped table-bordered table-condensed">
      <thead>
        <tr>
          <th colspan="2" class="col-sm-4"><%= DsrStatusRecord.human_attribute_name( :current_status )%></th>
          <th class="th-center col-sm-1"><%= t('dsr_status_records.stats.curr') %></th>
          <th class="th-center col-sm-1"><%= t('dsr_status_records.stats.base') %></th>
          <th class="th-center col-sm-1"><%= t('dsr_status_records.stats.var' ) %></th>
        </tr>
        <tr>
          <th class="col-sm-1"><%= Group.human_attribute_name( :code_short ) %></th>
          <th class="col-sm-3"><%= t('dsr_status_records.stats.wfs' ) %></th>
          <th class="th-center"><%= t('dsr_status_records.stats.abs') %></th>
          <th class="th-center"><%= t('dsr_status_records.stats.abs') %></th>
          <th class="th-center"><%= t('dsr_status_records.stats.abs') %></th>
        </tr>
      </thead>
      <tbody>
        <tr>
          <td colspan="2"><strong><%= t('dsr_status_records.stats.grand_total' ) %></strong></td>
          <td class="td-right"><%= @dsr_stats_gt[ 0 ] %></td>
          <td class="td-right"><%= @dsr_stats_gt[ 1 ] %></td>
          <td class="td-right"><%= @dsr_stats_gt[ 1 ] - @dsr_stats_gt[ 0 ] %></td>
        </tr>
      <%- if @dsr_stats_gt[ 0 ] + @dsr_stats_gt[ 1 ] > 0 then -%>
        <%- @workflow.no_of_states( 0 ).times do |wfs| -%>
          <tr>  
            <td></td>
            <td><%= @workflow.status_label( wfs, 0 ) %></td>
            <%- if @dsr_stats_oa[ wfs ][ 0 ] != 0 || @dsr_stats_oa[ wfs ][ 1 ] != 0 -%>
              <td class="td-right"><%= @dsr_stats_oa[ wfs ][ 0 ]%></td>
              <td class="td-right"><%= @dsr_stats_oa[ wfs ][ 1 ]%></td>
              <td class="td-right"><%= @dsr_stats_oa[ wfs ][ 0 ] - @dsr_stats_oa[ wfs ][ 1 ]%></td>
            <%- else -%>
              <td class="td-right"></td>
              <td class="td-right"></td>
              <td class="td-right"></td>
             <%- end -%>
          </tr>
        <%- end -%>
        <%- stats_d_ptr = 0 -%>
        <%- @dsr_stats_st.each do |st| -%>
          <tr>
            <td><strong><%= @dsr_groups.assoc( st[ 0 ])[ 1 ] %></strong></td>
            <td><em><%= t('dsr_status_records.stats.sub_total' ) %></em></td>
            <td class="td-right"><%= st[ 1 ] %></td>
            <td class="td-right"><%= st[ 2 ] %></td>
            <td class="td-right"><%= st[ 1 ] - st[ 2 ] %></td>
          </tr>
          <% @workflow.no_of_states( 0 ).times do |wfs| -%>
            <tr>
              <td></td>
              <td><%= @workflow.status_label( wfs, 0 ) %></td>
            <% if( stats_d_ptr < @dsr_stats_d.size )&&( @dsr_stats_d[ stats_d_ptr ][ 0 ] == st[ 0 ])&&( @dsr_stats_d[ stats_d_ptr ][ 1 ] == wfs )then %>
              <td class="td-right"><%= @dsr_stats_d[ stats_d_ptr ][ 2 ]%></td>
              <td class="td-right"><%= @dsr_stats_d[ stats_d_ptr ][ 3 ]%></td>
              <td class="td-right"><%= @dsr_stats_d[ stats_d_ptr ][ 2 ] - @dsr_stats_d[ stats_d_ptr ][ 3 ]%></td>
              <%- stats_d_ptr += 1 -%>
            <%- else -%>
              <td class="td-right"></td>
              <td class="td-right"></td>
              <td class="td-right"></td>
            <%- end -%>
            </tr>
          <%- end -%>
        <%- end -%>
      <%- end -%>
      </tbody>
    </table>
    <%= render partial: 'shared/footer', locals: { cr_details: 'stats_6' } %>
  </div>
</div>
