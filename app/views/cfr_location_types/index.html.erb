<%- page_title %>
<div class="container">
  <%= breadcrumbs %>
  <%= form_title %>
  <div class="table-responsive">
    <table class="table table-striped table-bordered">
      <thead>
        <tr>
          <th class="col-sm-1"><%= CfrLocationType.human_attribute_name( :id )-%></th>
          <th class="col-sm-4"><%= CfrLocationType.human_attribute_name( :label )-%></th>
          <th class="col-sm-3"><%= CfrLocationType.human_attribute_name( :note )-%></th>
          <th class="col-sm-2"><%= CfrLocationType.human_attribute_name( :location_type )-%>
          <th class="col-sm-1"><%= CfrLocationType.human_attribute_name( :project_dms )-%></th>
          <th class="col-sm-1"><%= t( 'action_title.header' )%></th>
        </tr>
      </thead>
      <tbody>
      <% if @cfr_location_types.length.zero? %>
        <%= render partial: 'shared/index_empty_row', locals:{ columns: 5, with_link: true }%>
      <% else %>
        <% @cfr_location_types.each do |t| %>
          <tr>
            <td><%= t.to_id %></td>
            <td><%= t.label %></td>
            <td><%= t.note %></td>
            <td><%= t.location_type_label %></td>
            <td><%= display_check_box t.project_dms %></td>
            <td><%= render partial: 'shared/actions', object: t %></td>
          </tr>
        <% end %>
      <% end %>
      </tbody>
    </table>
    <%= render partial: 'shared/footer' %>
  </div>
</div>
