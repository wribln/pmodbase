      <div class="form-group">
        <%= form.label :id, class: 'col-sm-3 control-label' %>
        <div class="col-sm-1">
          <%= display_value form.object.id %>
        </div>
      </div>
      <div class="form-group">
        <%= form.label :code, class: 'col-sm-3 control-label' %>
        <div class="col-sm-2">
          <%= form.text_field :code, class: 'form-control', required: true %>
        </div>
      </div>
      <div class="form-group">
        <%= form.label :label, class: 'col-sm-3 control-label' %>
        <div class="col-sm-4">
          <%= form.text_field :label, class: 'form-control', required: true %>
        </div>
      </div>
      <div class="form-group">
        <%= form.label :active, class: 'col-sm-3 control-label' %>
        <div class="col-sm-4">
          <%= form.check_box :active %>
        </div>
      </div>
      <div class="form-group">
        <%= form.label :master, class: 'col-sm-3 control-label' %>
        <div class="col-sm-4">
          <%= form.check_box :master %>
        </div>
      </div>
      <div class="form-group">
        <%= form.label :mapping, class: 'col-sm-3 control-label' %>
        <div class="col-sm-4">
          <%= form.text_field :mapping, class: 'form-control' %>
        </div>
      </div>
      <div class="form-group">
        <%= form.label :description, class: 'col-sm-3 control-label' %>
        <div class="col-sm-4">
          <%= form.text_area :description, cols: DEFAULT_COLS_TEXTAREA, rows: DEFAULT_ROWS_TEXTAREA, class: 'form-control' %>
        </div>
      </div>

