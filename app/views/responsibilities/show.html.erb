<%- page_title %>
<div class="container">
  <%= breadcrumbs %>
  <%= form_title %>
  <div class="form-horizontal" role="form">
    <%= form_for @responsibility do |r| %>  
      <%= render partial: 'shared/notice' %>
      <div class="form-group">
        <%= r.label :id, class: 'col-sm-3 control-label' %>
        <div class="col-sm-2">
          <%= display_value r.object.to_id %>
        </div>
      </div>
      <div class="form-group">
        <%= r.label :group_id, class: 'col-sm-3 control-label' %>
        <div class="col-sm-4">
          <%= display_value r.object.group.code_and_label %>
        </div>
      </div>
      <div class="form-group">
        <%= r.label :seqno, class: 'col-sm-3 control-label' %>
        <div class="col-sm-1">
          <%= display_value r.object.seqno %>
        </div>
      </div>
      <div class="form-group">
        <%= r.label :description, class: 'col-sm-3 control-label' %>
        <div class="col-sm-4">
          <%= display_value r.object.description %>
        </div>
      </div>
      <div class="form-group">
        <%= r.label :person_id, class: 'col-sm-3 control-label' %>
        <div class="col-sm-3">
          <%= display_value r.object.person_id.zero? ? t( 'people.no_name_given' ) : r.object.person.try( :name_with_id ) %>
        </div>
      </div>
      <div class="form-group">
        <div class="col-sm-offset-3 col-sm-2">
          <%= link_to t( 'button_label.edit' ), edit_responsibility_path(@responsibility), class: 'btn btn-lg btn-block btn-default' %>  
        </div>  
        <div class="col-sm-2">  
          <%= link_to t( 'button_label.go_to_index' ), responsibilities_path, class: 'btn btn-lg btn-block btn-default' %>  
        </div>  
      </div>
    <% end %>  
  </div>  
</div>
  
