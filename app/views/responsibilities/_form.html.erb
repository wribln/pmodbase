      <div class="form-group">
        <%= form.label :id, class: 'col-sm-3 control-label' %>
        <div class="col-sm-1">
          <%= display_value form.object.id %>
        </div>
      </div>
      <div class="form-group">
        <%= form.label :group_id, class: 'col-sm-3 control-label' %>
        <div class="col-sm-4">
          <%= form.select :group_id, @group_selection, { prompt: t( '.g_prompt' )}, { class: 'form-control', required: true } %>
        </div>
      </div>
      <div class="form-group">
        <%= form.label :seqno, class: 'col-sm-3 control-label' %>
        <div class="col-sm-2">
          <%= form.text_field :seqno, class: 'form-control', required: true %>
        </div>
      </div>
      <div class="form-group">
        <%= form.label :description, class: 'col-sm-3 control-label' %>
        <div class="col-sm-4">
          <%= form.text_field :description, class: 'form-control', required: true %>
        </div>
      </div>
      <div class="form-group">
        <%= form.label :person_id, class: 'col-sm-3 control-label' %>
        <div class="col-sm-1">
          <%= form.text_field :person_id, class: 'form-control', required: true %>
        </div>
        <div class="col-sm-2">
          <%= link_to t( '.people_link' ), people_path, class: 'btn btn-sm btn-block btn-default', target: '_blank' %>
        </div>
      </div>
