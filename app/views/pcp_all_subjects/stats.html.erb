<%- page_title %>
<div class="container">
  <%= breadcrumbs %>
  <%= form_title_w_sub_title t( @pcp_sub_title, stats_date: db_formatted_dt( Time.now ))%>
  <div class="table-responsive col-sm-8">
    <table class="table table-striped table-bordered table-condensed">
      <thead>
        <tr>
          <th class="col-sm-4"><%= PcpCategory.model_name.human %></th>
          <th class="th-right col-sm-1"><%= PcpStep.subject_status_label( 0 ) %></th>
          <th class="th-right col-sm-1"><%= PcpStep.subject_status_label( 1 ) %></th>
          <th class="th-right col-sm-1"><%= PcpStep.subject_status_label( 2 ) %></th>
          <th class="th-right col-sm-1"><%= t( 'pcp_all_subjects.stats.total_col' )%></th>
        </tr>
      </thead>
      <tbody>
        <tr>
          <td><strong><%= t('pcp_all_subjects.stats.total_row' ) %></strong></td>
          <td class="td-right"><%= db_formatted_abs @pcp_totals[ 0 ] %></td>
          <td class="td-right"><%= db_formatted_abs @pcp_totals[ 1 ] %></td>
          <td class="td-right"><%= db_formatted_abs @pcp_totals[ 2 ] %></td>
          <td class="td-right"><%= db_formatted_abs @pcp_totals[ 3 ] %></td>
        </tr>
      <%- @pcp_stats.each do |s| -%>
        <tr>
          <td><%= s[ 1 ] %></td>
          <td class="td-right"><%= db_formatted_abs s[ 2 ] %></td>
          <td class="td-right"><%= db_formatted_abs s[ 3 ] %></td>
          <td class="td-right"><%= db_formatted_abs s[ 4 ] %></td>
          <td class="td-right"><%= db_formatted_abs s[ 5 ] %></td>
        </tr>
      <%- end -%>
      </tbody>
    </table>
    <%= render partial: 'shared/footer', locals: { cr_details: 'stats' }%>
  </div>
</div>
