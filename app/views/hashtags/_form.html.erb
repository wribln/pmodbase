      <div class="form-group">
        <%= form.label :id, class: 'col-sm-3 control-label' %>
        <div class="col-sm-2">
          <%= display_value form.object.id %>
        </div>
      </div>
      <div class="form-group">
        <%= form.label :code, class: 'col-sm-3 control-label' %>
        <div class="col-sm-2">
          <%= form.text_field :code, class: 'form-control', required: true %>
        </div>
      </div>
      <div class="form-group">
        <%= form.label :label, class: 'col-sm-3 control-label' %>
        <div class="col-sm-4">
          <%= form.text_field :label, class: 'form-control', required: true %>
        </div>
      </div>
      <div class="form-group">
        <%= form.label :seqno, class: 'col-sm-3 control-label' %>
        <div class="col-sm-1">
          <%= form.text_field :seqno, class: 'form-control', required: true %>
        </div>
      </div>
      <div class="form-group">
        <%= form.label :feature_id, class: 'col-sm-3 control-label' %>
        <div class="col-sm-4">           
          <%= form.select :feature_id, @permitted_features, { prompt: t( '.f_prompt' )}, class: 'form-control', required: true %>
        </div>
      </div>

