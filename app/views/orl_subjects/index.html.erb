<%- page_title %>
<div class="container">
  <%= breadcrumbs %>
  <%= form_title %>
  <div class="table-responsive col-sm-11">
    <%= form_tag({},{ method: :get, class: 'form_inline' }) do %>
    <%= will_paginate @orl_subjects %>
    <table class="table table-bordered">
      <thead>
        <tr>
          <th class="col-sm-1"><%= OrlSubject.human_attribute_name( :id )%></th>
          <th class="col-sm-4"><%= OrlSubject.human_attribute_name( :desc )%> /
                               <%= OrlSubject.human_attribute_name( :project_doc_id )%></th>
          <th class="col-sm-1"><%= t( '.status_subj' )%></th>
          <th class="col-sm-1"><%= t( '.assessment' )%></th>
          <th class="col-sm-2"><%= t( '.status_step' )%></th>
          <th class="col-sm-1"><%= t( '.ballpark' )%></th>
          <th class="col-sm-1 hidden-print"><%= filter_action_title_header %></th>
        </tr>
      </thead>
      <tbody>
      <% if @orl_subjects.length.zero? %>
        <%= render partial: 'shared/index_empty_row', locals:{ columns: 6, with_link: true }%>
      <% else %>
        <% @orl_subjects.each do |os| %>
          <% cs = os.current_step %>
          <tr>
            <td><%= os.id %></td>
            <td><%= display_two_items_w_br os.desc, os.project_doc_id %></td>
            <td><%= cs.subject_status_label %></td>
            <td><%= cs.assessment_code %></td>
            <td><%= cs.step_label %></td>
            <td><%= os.acting_group( cs.ballpark ).code %></td>
            <td><%= render partial: 'shared/actions', object: os %></td>
          </tr>
        <% end %>
      <% end %>
      </tbody>
    </table>
    <% end %>
    <%= render partial: 'shared/footer' %>
  </div>
</div>
