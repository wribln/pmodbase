<%- page_title %>
<div class="container">
  <%= breadcrumbs %>
  <%= form_title %>
  <div class="table-responsive col-sm-8">
    <table class="table table-striped table-bordered">
      <thead>
        <tr>
          <th class="col-sm-1"><%= SubmissionGroup.human_attribute_name( :id    ) %></th>
          <th class="col-sm-2"><%= SubmissionGroup.human_attribute_name( :code  ) %></th>
          <th class="col-sm-4"><%= SubmissionGroup.human_attribute_name( :label ) %></th>
          <th class="col-sm-1 hidden-print"><%= t( 'action_title.header'    ) %></th>
        </tr>
      </thead>
      <tbody>
        <% if @submission_groups.length.zero? %>
          <%= render partial: 'shared/index_empty_row', locals:{ columns: 3, with_link: true }%>
        <% else %>
          <% @submission_groups.each do |sg| %>
            <tr>
              <td><%= sg.to_id %></td>
              <td><%= sg.code  %></td>
              <td><%= sg.label %></td>
              <td><%= render partial: 'shared/actions', object: sg %></td>
            </tr>
          <% end %>
        <% end %>
      </tbody>
    </table>
    <%= render partial: 'shared/footer' %>
  </div>
</div>
