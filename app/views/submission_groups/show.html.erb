<%- page_title %>
<div class="container">
  <%= breadcrumbs %>
  <%= form_title %>
  <div class="form-horizontal" role="form">
    <%= form_for @submission_group do |sg| %>
      <%= render partial: 'shared/notice' %>
      <div class="form-group">
        <%= sg.label :id, class: 'col-sm-3 control-label' %>
        <div class="col-sm-2">
          <%= display_value sg.object.to_id %>
        </div>
      </div>
      <div class="form-group">
        <%= sg.label :code, class: 'col-sm-3 control-label' %>
        <div class="col-sm-2">
          <%= display_value sg.object.code %>
        </div>
      </div>
      <div class="form-group">
        <%= sg.label :label, class: 'col-sm-3 control-label' %>
        <div class="col-sm-4">
          <%= display_value sg.object.label %>
        </div>
      </div>
      <div class="form-group">
        <div class="col-sm-offset-3 col-sm-2">
          <%= link_to t( 'button_label.edit' ), edit_submission_group_path( @submission_group ), class: 'btn btn-lg btn-block btn-default' %>
        </div>
        <div class="col-sm-2">
          <%= link_to t( 'button_label.go_to_index' ), submission_groups_path, class: 'btn btn-lg btn-block btn-default' %>
        </div>
      </div>
    <% end %>
  </div>
</div>
