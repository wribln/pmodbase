<%- page_title %>
<div class="container">
  <%= breadcrumbs %>
  <%= form_title %>
  <div class="form-horizontal" role="form">
    <%= form_for @contact_info do |ci| %>
      <%= render partial: 'shared/notice' %>
      <div class="form-group">
        <%= ci.label :id, class: 'col-sm-3 control-label' %>
        <div class="col-sm-2">
          <%= display_value ci.object.to_id %>
        </div>
      </div>
      <div class="form-group">
        <%= ci.label :person_id, class: 'col-sm-3 control-label' %>
        <div class="col-sm-2">
          <%= display_value ci.object.person_id %>
       </div>
      </div>
      <div class="form-group">
        <%= ci.label :info_type, class: 'col-sm-3 control-label' %>
        <div class="col-sm-2">
          <%= display_value ci.object.info_type %>
        </div>
      </div>
      <div class="form-group">
        <%= ci.label :phone_no_fixed, class: 'col-sm-3 control-label' %>
        <div class="col-sm-4">
          <%= display_value ci.object.phone_no_fixed %>
        </div>
      </div>
      <div class="form-group">
        <%= ci.label :phone_no_mobile, class: 'col-sm-3 control-label' %>
        <div class="col-sm-4">
          <%= display_value ci.object.phone_no_mobile %>
        </div>
      </div>
      <div class="form-group">
        <%= ci.label :department, class: 'col-sm-3 control-label' %>
        <div class="col-sm-4">
          <%= display_value ci.object.department %>
        </div>
      </div>
      <div class="form-group">
        <%= ci.label :detail_location, class: 'col-sm-3 control-label' %>
        <div class="col-sm-4">
          <%= display_value ci.object.detail_location %>
        </div>
      </div>
      <div class="form-group">
        <%= ci.label :address_id, class: 'col-sm-3 control-label' %>
        <div class="col-sm-4">
          <%= display_value ci.object.address.try( :label ) %>
        </div>
      </div>
      <div class="form-group">
        <div class="col-sm-offset-3 col-sm-2">
          <%= link_to t( 'button_label.edit' ), edit_contact_info_path(@contact_info), class: 'btn btn-lg btn-block btn-default' %>
        </div>
        <div class="col-sm-2">
          <%= link_to t( 'button_label.go_to_index' ), contact_infos_path, class: 'btn btn-lg btn-block btn-default' %>
        </div>
      </div>
    <% end %>
  </div>
</div>
 