<%- page_title %>
<div class="container">
  <%= breadcrumbs %>
  <%= form_title %>
  <div class="form-horizontal" role="form">
    <%= form_for @a3_code do |f| %>
      <%= render partial: 'shared/notice' %>
      <div class="form-group">
        <%= f.label :id, class: 'col-sm-3 control-label' %>
        <div class="col-sm-2">
          <%= display_value f.object.to_id %>
        </div>
      </div>
      <div class="form-group">
        <%= f.label :code, class: 'col-sm-3 control-label' %>
        <div class="col-sm-2">
          <%= display_value f.object.code %>
        </div>
      </div>
      <div class="form-group">
        <%= f.label :label, class: 'col-sm-3 control-label' %>
        <div class="col-sm-4">
          <%= display_value f.object.label %>
        </div>
      </div>
      <div class="form-group">
        <%= f.label :active, class: 'col-sm-3 control-label' %>
        <div class="col-sm-4">
          <%= display_check_box f.object.active %>
        </div>
      </div>
      <div class="form-group">
        <%= f.label :master, class: 'col-sm-3 control-label' %>
        <div class="col-sm-4">
          <%= display_check_box f.object.master %>
        </div>
      </div>
      <div class="form-group">
        <%= f.label :mapping, class: 'col-sm-3 control-label' %>
        <div class="col-sm-4">
          <%= display_value f.object.mapping %>
        </div>
      </div>
      <div class="form-group">
        <%= f.label :description, class: 'col-sm-3 control-label' %>
        <div class="col-sm-4">
          <%= display_lines f.object.description %>
        </div>
      </div>
      <div class="form-group">
        <div class="col-sm-offset-3 col-sm-2">
          <%= link_to t( 'button_label.edit' ), edit_a3_code_path( @a3_code ), class: 'btn btn-lg btn-block btn-default' %>
        </div>
        <div class="col-sm-2">
          <%= link_to t( 'button_label.go_to_index' ), a3_codes_path, class: 'btn btn-lg btn-block btn-default' %>
        </div>
      </div>
    <% end %>
  </div>
</div>
