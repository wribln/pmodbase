<%- page_title %>
<div class="container">
  <%= breadcrumbs %>
  <%= form_title %>
  <div class="form-horizontal" role="form">
    <%= form_for @pcp_subject do |f| %>
      <%= render partial: 'shared/errors', object: @pcp_subject.errors %>
      <%= ( render partial: 'shared/errors', object: @pcp_step_new.errors )unless @pcp_step_new.nil? %>
      <%= ( render partial: 'shared/errors', object: @pcp_step.errors )unless @pcp_step.nil? %>
      <%= render partial: 'shared/notice' %>
      <div class="form-group">
        <%= f.label :id, class: "col-sm-3 control-label" %>
        <div class="col-sm-1">
          <%= display_value f.object.id %>
        </div>
      </div>
      <div class="form-group">
        <%= f.label :pcp_category_id, class: "col-sm-3 control-label" %>
        <div class="col-sm-4">
          <%= display_value f.object.pcp_category.label %>
        </div>
      </div>
      <div class="form-group">
        <%= f.label :title, class: "col-sm-3 control-label" %>
        <div class="col-sm-4">
          <%= display_value f.object.title %>
        </div>
      </div>
      <div class="form-group">
        <%= f.label :note, class: "col-sm-3 control-label" %>
        <div class="col-sm-4">
          <%= display_value f.object.note %>
        </div>
      </div>
      <div class="form-group">
        <%= f.label :project_doc_id, class: "col-sm-3 control-label" %>
        <div class="col-sm-4">
          <%= display_value f.object.project_doc_id %>
        </div>
      </div>
      <div class="form-group">
        <%= f.label :p_group_id, class: "col-sm-3 control-label" %>
        <div class="col-sm-4">
          <%= display_value f.object.p_group.code_and_label %>
        </div>
      </div>
      <div class="form-group">
        <%= f.label :p_owner_id, class: "col-sm-3 control-label" %>
        <div class="col-sm-1">
          <%= display_value f.object.p_owner_id %>
        </div>
        <div class="col-sm-4">
          <p class="form-control-static"><%= link_to_contact_list f.object.p_owner %></p>
        </div>
      </div>
      <div class="form-group">
        <%= f.label :p_deputy_id, class: "col-sm-3 control-label" %>
        <div class="col-sm-1">
          <%= display_value f.object.p_deputy_id %>
        </div>
        <div class="col-sm-4">
          <p class="form-control-static"><%= link_to_contact_list f.object.p_deputy %></p>
        </div>
      </div>
      <div class="form-group">
        <%= f.label :c_group_id, class: "col-sm-3 control-label" %>
        <div class="col-sm-4">
          <%= display_value f.object.c_group.code_and_label %>
        </div>
      </div>
      <div class="form-group">
        <%= f.label :c_owner_id, class: "col-sm-3 control-label" %>
        <div class="col-sm-1">
          <%= display_value f.object.c_owner_id %>
        </div>
        <div class="col-sm-4">
          <p class="form-control-static"><%= link_to_contact_list f.object.c_owner %></p>
        </div>
      </div>
      <div class="form-group">
        <%= f.label :c_deputy_id, class: "col-sm-3 control-label" %>
        <div class="col-sm-1">
          <%= display_value f.object.c_deputy_id %>
        </div>
        <div class="col-sm-4">
          <p class="form-control-static"><%= link_to_contact_list f.object.c_deputy %></p>
        </div>
      </div>
      <div class="form-group">
        <%= f.label :report_doc_id, class: "col-sm-3 control-label" %>
        <div class="col-sm-4">
          <%= display_value f.object.report_doc_id %>
        </div>
      </div>
      <div class="form-group">
        <%= f.label :status, class: "col-sm-3 control-label" %>
        <div class="col-sm-1">
          <%= display_value @pcp_step.subject_status_label %>
        </div>
      </div>
      <%- if @pcp_step && @pcp_step.status_closed? then -%>
      <div class="form-group">
        <%= f.label :archived, class: "col-sm-3 control-label" %>
        <div class="col-sm-1">
          <%= f.check_box :archived, disabled: true, readonly: true %>
        </div>
      </div>
      <%- else -%>
      <!-- data on current step -->
      <%= f.fields_for :pcp_steps, @pcp_step do |os| -%>
        <div class="form-group">
          <%= os.label :step_no, t( '.cs_heading', label: os.object.step_label ), class: "col-sm-3 control-label" %>
          <div class="col-sm-4"><hr /></div>
        </div>
        <div class="form-group">
          <%= os.label :subject_date, class: "col-sm-3 control-label" %>
          <div class="col-sm-2">
            <%= display_value os.object.subject_date %>
          </div>
        </div>
        <div class="form-group">
          <%= os.label :subject_version, class: "col-sm-3 control-label" %>
          <div class="col-sm-1">
            <%= display_value os.object.subject_version %>
          </div>
        </div>
        <div class="form-group">
          <%= os.label :note, class: "col-sm-3 control-label" %>
          <div class="col-sm-4">
            <%= display_value os.object.note %>
          </div>
        </div>
        <div class="form-group">
          <%= os.label :due_date, class: "col-sm-3 control-label" %>
          <div class="col-sm-2">
            <%= display_value db_formatted_d( os.object.due_date )%>
          </div>
        </div>
        <div class="form-group">
          <%= os.label :prev_assmt, class: "col-sm-3 control-label" %>
          <div class="col-sm-4">
            <%= display_value PcpStep.assessment_label( os.object.prev_assmt) %>
          </div>
        </div>
        <div class="form-group">
          <%= os.label :new_assmt, class: "col-sm-3 control-label" %>
          <div class="col-sm-4">
            <%= display_value PcpStep.assessment_label( os.object.new_assmt) %>
          </div>
        </div>
      <%- end -%>
      <%- end -%>
      <div class="form-group">
        <div class="col-sm-offset-3 col-sm-2">
          <%= link_to t( 'button_label.edit' ), edit_pcp_subject_path( @pcp_subject ), class: "btn btn-lg btn-block btn-default" %>
        </div>
        <div class="col-sm-2">
          <%= link_to t( 'button_label.release' ), pcp_subject_release_path( @pcp_subject ), class: "btn btn-lg btn-block btn-default" %>
        </div>
        <div class="col-sm-2">
          <%= link_to t( 'button_label.history' ), pcp_subject_history_path( @pcp_subject ), class: "btn btn-lg btn-block btn-default" %>
        </div>
        <div class="col-sm-2">
          <%= link_to t( 'button_label.goto_to_list' ), pcp_subjects_path, class: "btn btn-lg btn-block btn-default" %>
        </div>
      </div>
    <% end %>
  </div>
</div>
