<%- page_title %>
<div class="container">
  <%= breadcrumbs %>
  <%= form_title_w_link( @sir_log.label, sir_logs_path )%>
  <div class="table-responsive">
    <table class="table table-striped table-bordered">
      <thead>
        <tr>
          <th class="col-sm-2"><%= SirItem.human_attribute_name( :seqno     )%></th>
          <th class="col-sm-2"><%= SirItem.human_attribute_name( :reference )%></th>
          <th class="col-sm-3"><%= SirItem.human_attribute_name( :label     )%></th>
          <th class="col-sm-1"><%= SirItem.human_attribute_name( :group_id  )%></th>
          <th class="col-sm-1"><%= SirItem.human_attribute_name( :status    )%></th>
          <th class="col-sm-1"><%= SirItem.human_attribute_name( :category  )%></th>
          <th class="col-sm-1"><%= SirItem.human_attribute_name( :phase_code_id )%></th>
          <th class="col-sm-1"><%= t( 'action_title.header' )%></th>
        </tr>
      </thead>
      <tbody>
      <% if @sir_items.length.zero? %>
        <%= render partial: 'shared/index_empty_row', locals:{ columns: 7, with_link: true }%>
      <% else %>
        <% @sir_items.each do |si| %>
          <tr>
            <td><%= si.item_code %></td>
            <td><%= si.reference %></td>
            <td><%= si.label %></td>
            <td><%= si.group_code %></td>
            <td><%= si.status_label %></td>
            <td><%= si.category_label.first %></td>
            <td><%= si.phase_code_code %></td>
            <td><%= render partial: 'shared/actions', object: si %></td>
          </tr>
        <% end %>
      <% end %>
      </tbody>
    </table>
    <%= render partial: 'shared/footer' %>
  </div>
</div>
