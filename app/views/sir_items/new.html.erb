<%- page_title %>
<div class="container">
  <%= breadcrumbs %>
  <%= form_title_w_link( @sir_log.label, sir_logs_path )%>
  <div class="form-horizontal" role="form">
    <%= form_for @sir_item, url: sir_log_sir_items_path( @sir_log ) do |f| %>
      <%= render partial: 'shared/errors', object: @sir_item.errors %>
      <%= render partial: 'form', object: f %>
      <div class="form-group">
        <div class="col-sm-offset-3 col-sm-2">
          <%= f.submit class: 'btn btn-lg btn-block btn-primary' %>
        </div>
        <div class="col-sm-2">
          <%= link_to t( 'button_label.cancel_to_index' ), sir_log_sir_items_path( @sir_log ), class: 'btn btn-lg btn-block btn-default' %>
        </div>
      <div>
    <% end %>
  </div>
</div>
