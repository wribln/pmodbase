<%- page_title %>
<div class="container">
  <%= breadcrumbs %>
  <%= form_title %>
  <div class="form-horizontal" role="form">
    <%= form_for @sir_item do |f| %>
      <%= render partial: 'shared/notice' %>
      <div class="form-group">
        <%= f.label :seqno, class: 'col-sm-3 control-label' %>
        <div class="col-sm-2">
          <%= display_value f.object.item_code %>
        </div>
      </div>
      <div class="form-group">
        <%= f.label :reference, class: 'col-sm-3 control-label' %>
        <div class="col-sm-2">
          <%= display_value f.object.reference %>
        </div>
      </div>
      <div class="form-group">
        <%= f.label :label, class: 'col-sm-3 control-label' %>
        <div class="col-sm-6">
          <%= display_value f.object.label %>
        </div>
      </div>
      <div class="form-group">
        <%= f.label :description, class: 'col-sm-3 control-label' %>
        <div class="col-sm-6">
          <%= display_lines f.object.description %>
        </div>
      </div>
      <%= render partial: 'shared/show_cfr', locals: { fbo: f }%>
      <div class="form-group">
        <%= f.label :category, class: 'col-sm-3 control-label' %>
        <div class="col-sm-2">
          <%= display_value f.object.category_label %>
        </div>
      </div>
      <div class="form-group">
        <%= f.label :status, class: 'col-sm-3 control-label' %>
        <div class="col-sm-2">
          <%= display_value f.object.status_label %>
        </div>
      </div>
      <div class="form-group">
        <%= f.label :phase_code_id, class: 'col-sm-3 control-label' %>
        <div class="col-sm-4">
          <%= display_value f.object.phase_code.try( :code_and_label ) %>
        </div>
      </div>
      <div class="form-group">
        <%= f.label :group_id, class: 'col-sm-3 control-label' %>
        <div class="col-sm-4">
          <%= display_value f.object.group.try( :code_and_label )%>
        </div>
      </div>
      <div class="form-group">
        <%= f.label :archived, class: 'col-sm-3 control-label' %>
        <div class="col-sm-1">
          <%= display_check_box f.object.archived %>
        </div>
      </div>
      <div class="form-group">
        <div class="col-sm-offset-3 col-sm-2">
          <%= link_to t( 'button_label.show' ), sir_item_path( @sir_item ), class: 'btn btn-lg btn-block btn-default' %>
        </div>
        <div class="col-sm-2">
          <%= link_to t( 'button_label.edit' ), edit_sir_item_path( @sir_item ), class: 'btn btn-lg btn-block btn-default' %>
        </div>
        <div class="col-sm-2">
          <%= link_to t( 'button_label.go_to_index' ), sir_log_sir_items_path( @sir_item.sir_log ), class: 'btn btn-lg btn-block btn-default' %>
        </div>
      </div>
    <% end %>
  </div>
</div>
