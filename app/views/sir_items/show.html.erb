<%- page_title %>
<div class="container">
  <%= breadcrumbs %>
  <%= form_title %>
  <div class="form-horizontal" role="form">
    <%= form_for @sir_item do |f| %>
      <%= render partial: 'shared/notice' %>
      <%= render partial: 'show_item', object: @sir_item %>
      <!-- Divider Line -->
      <div class="form-group">
        <hr style="margin:4px"/>  
      </div>
      <!-- SIR Entries -->
      <%- if @sir_entries.empty? -%>
        <div class="form-group">
          <div class="col-sm-offset-3 col-sm-4"><%= t( '.no_entries' ) %></div>
        </div>
      <%- else -%>
        <%- @sir_entries.each do |se| %>
          <%= render partial: 'show_entry', object: se %>
        <%- end %>
      <%- end -%>
      <!-- Divider Line -->
      <div class="form-group">
        <hr style="margin:4px"/>  
      </div>
      <div class="form-group">
        <div class="col-sm-offset-3 col-sm-2">
          <%= link_to t( 'button_label.all' ), sir_item_details_path( @sir_item ), class: 'btn btn-lg btn-block btn-default' %>
        </div>
        <div class="col-sm-2">
          <%= link_to t( 'button_label.edit' ), edit_sir_item_path( @sir_item ), class: 'btn btn-lg btn-block btn-default' %>
        </div>
        <div class="col-sm-2">
          <%= link_to t( 'button_label.go_to_index' ), sir_log_sir_items_path( @sir_item.sir_log ), class: 'btn btn-lg btn-block btn-default' %>
        </div>
      </div>
      <div class="form-group">    
        <div class="col-sm-offset-5 col-sm-2">
          <%= link_to t( 'isr_interfaces.show.add_ia' ), new_sir_log_sir_item_path( @sir_item.sir_log ), class: 'btn btn-lg btn-block btn-default' %>
        </div>
        <div class="col-sm-2">
          <%# link_to t( 'button_label.wdr' ), withdraw_isr_interface_path( @isr_interface ), class: 'btn btn-lg btn-block btn-default' %>
        </div>
      </div>
    <%- end %>
  </div>
</div>
