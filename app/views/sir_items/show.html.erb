<%- page_title %>
<div class="container">
  <%= breadcrumbs %>
  <%= form_title %>
  <div class="form-horizontal" role="form">
    <%= form_for @sir_item do |f| %>
      <%= render partial: 'shared/notice' %>
      <div class="form-group">
        <%= f.label :id, class: 'col-sm-3 control-label' %>
        <div class="col-sm-2">
          <%= display_value f.object.to_id %>
        </div>
      </div>
      <div class="form-group">
        <%= f.label :group, class: 'col-sm-3 control-label' %>
        <div class="col-sm-4">
          <%= display_value f.object.group %>
        </div>
      </div>
      <div class="form-group">
        <%= f.label :ref_id, class: 'col-sm-3 control-label' %>
        <div class="col-sm-4">
          <%= display_value f.object.ref_id %>
        </div>
      </div>
      <div class="form-group">
        <%= f.label :cfr_record, class: 'col-sm-3 control-label' %>
        <div class="col-sm-4">
          <%= display_value f.object.cfr_record %>
        </div>
      </div>
      <div class="form-group">
        <%= f.label :label, class: 'col-sm-3 control-label' %>
        <div class="col-sm-4">
          <%= display_value f.object.label %>
        </div>
      </div>
      <div class="form-group">
        <%= f.label :status, class: 'col-sm-3 control-label' %>
        <div class="col-sm-4">
          <%= display_value f.object.status %>
        </div>
      </div>
      <div class="form-group">
        <%= f.label :category, class: 'col-sm-3 control-label' %>
        <div class="col-sm-4">
          <%= display_value f.object.category %>
        </div>
      </div>
      <div class="form-group">
        <%= f.label :phase, class: 'col-sm-3 control-label' %>
        <div class="col-sm-4">
          <%= display_value f.object.phase %>
        </div>
      </div>
      <div class="form-group">
        <%= f.label :archived, class: 'col-sm-3 control-label' %>
        <div class="col-sm-4">
          <%= display_value f.object.archived %>
        </div>
      </div>
      <div class="form-group">
        <%= f.label :desc, class: 'col-sm-3 control-label' %>
        <div class="col-sm-4">
          <%= display_value f.object.desc %>
        </div>
      </div>
      <div class="form-group">
        <div class="col-sm-offset-3 col-sm-2">
          <%= link_to t( 'button_label.edit' ), edit_sir_item_path( @sir_item ), class: 'btn btn-lg btn-block btn-default' %>
        </div>
        <div class="col-sm-2">
          <%= link_to t( 'button_label.go_to_index' ), sir_items_path, class: 'btn btn-lg btn-block btn-default' %>
        </div>
      </div>
    <% end %>
  </div>
</div>
