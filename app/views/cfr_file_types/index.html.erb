<%- page_title %>
<div class="container">
  <%= breadcrumbs %>
  <%= form_title %>
  <div class="table-responsive col-sm-10">
    <table class="table table-striped table-bordered">
      <thead>
        <tr>
          <th class="col-sm-1"><%= CfrFileType.human_attribute_name( :id )%></th>
          <th class="col-sm-4"><%= CfrFileType.human_attribute_name( :label )%></th>
          <th class="col-sm-4"><%= CfrFileType.human_attribute_name( :extensions )%></th>
          <th class="col-sm-1"><%= t( 'action_title.header' )%></th>
        </tr>
      </thead>
      <tbody>
      <% if @cfr_file_types.length.zero? %>
        <%= render partial: 'shared/index_empty_row', locals:{ columns: 3, with_link: true }%>
      <% else %>
        <% @cfr_file_types.each do |t| %>
          <tr>
            <td><%= t.to_id %></td>
            <td><%= t.label %></td>
            <td><%= t.extensions.try( :gsub, ',', ', ' )%></td>
            <td><%= render partial: 'shared/actions', object: t %></td>
          </tr>
        <% end %>
      <% end %>
      </tbody>
    </table>
    <%= render partial: 'shared/footer' %>
  </div>
</div>
