<%- page_title %>
<div class="container">
  <%= breadcrumbs %>
  <%= form_title %>
  <div class="form-horizontal" role="form">
    <%= form_for @rfc_document do |f| %>
      <%= render partial: 'shared/notice' %>
      <div class="form-group">
        <%= f.label :rfc_status_record_id, class: 'col-sm-3 control-label' %>
        <div class="col-sm-2">
          <%= f.text_field :rfc_status_record_id, class: 'form-control', readonly: true %>
        </div>
      </div>
      <div class="form-group">
        <%= f.label :version, class: 'col-sm-3 control-label' %>
        <div class="col-sm-1">
          <%= f.text_field :version, class: 'form-control', readonly: true %>
        </div>
      </div>
      <div class="form-group">
        <%= f.label :question, class: 'col-sm-3 control-label' %>
        <div class="col-sm-9">
          <%= f.text_area :question, cols: DEFAULT_COLS_TEXTAREA, rows: DEFAULT_ROWS_TEXTAREA, class: 'form-control', readonly: true %>
        </div>
      </div>
      <div class="form-group">
        <%= f.label :answer, class: 'col-sm-3 control-label' %>
        <div class="col-sm-9">
          <%= f.text_area :answer, cols: DEFAULT_COLS_TEXTAREA, rows: ( DEFAULT_ROWS_TEXTAREA * 2 ), class: 'form-control', readonly: true %>
        </div>
      </div>
      <div class="form-group">
        <%= f.label :note, class: 'col-sm-3 control-label' %>
        <div class="col-sm-9">
          <%= f.text_area :note, cols: DEFAULT_COLS_TEXTAREA, rows: DEFAULT_ROWS_TEXTAREA, class: 'form-control', readonly: true %>
        </div>
      </div>
      <div class="form-group">
        <%= f.label :id, class: 'col-sm-3 control-label' %>
        <div class="col-sm-2">
          <%= f.text_field :id, class: 'form-control', readonly: true %>
        </div>
      </div>
      <div class="form-group">
        <%= f.label :account_id, class: 'col-sm-3 control-label' %>
        <div class="col-sm-2">
          <%= f.text_field :account_id, class: 'form-control', readonly: true %>
        </div>
      </div>
      <div class="form-group">
        <%= f.label :created_at, class: 'col-sm-3 control-label' %>
        <div class="col-sm-2">
          <%= display_value db_formatted_d( f.object.created_at ) %>
        </div>
      </div>
      <div class="form-group">
        <%= f.label :updated_at, class: 'col-sm-3 control-label' %>
        <div class="col-sm-2">
          <%= display_value db_formatted_d( f.object.updated_at ) %>
        </div>
      </div>
      <div class="form-group">
        <div class="col-sm-offset-3 col-sm-2">
          <%= link_to t( 'button_label.edit' ), edit_rfc_document_path( @rfc_document ), class: 'btn btn-lg btn-block btn-default' %>
        </div>
        <div class="col-sm-2">
          <%= link_to t( 'button_label.goto_to_list' ), rfc_documents_path, class: 'btn btn-lg btn-block btn-default' %>
        </div>
      </div>
    <% end %>
  </div>
</div>
