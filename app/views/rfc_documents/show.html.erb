<%- page_title %>
<div class="container">
  <%= breadcrumbs %>
  <%= form_title %>
  <div class="form-horizontal" role="form">
    <%= form_for @rfc_document do |f| %>
      <%= render partial: 'shared/notice' %>
      <div class="form-group">
        <%= f.label :rfc_status_record_id, class: 'col-sm-3 control-label' %>
        <div class="col-sm-2">
          <%= display_value some_id( f.object.rfc_status_record_id )%>
        </div>
      </div>
      <div class="form-group">
        <%= f.label :version, class: 'col-sm-3 control-label' %>
        <div class="col-sm-1">
          <%= display_value f.object.version %>
        </div>
      </div>
      <div class="form-group">
        <%= f.label :question, class: 'col-sm-3 control-label' %>
        <div class="col-sm-9">
          <%= display_lines f.object.question %>
        </div>
      </div>
      <div class="form-group">
        <%= f.label :answer, class: 'col-sm-3 control-label' %>
        <div class="col-sm-9">
          <%= display_lines f.object.answer %>
        </div>
      </div>
      <div class="form-group">
        <%= f.label :note, class: 'col-sm-3 control-label' %>
        <div class="col-sm-9">
          <%= display_lines f.object.note %>
        </div>
      </div>
      <div class="form-group">
        <%= f.label :id, class: 'col-sm-3 control-label' %>
        <div class="col-sm-2">
          <%= display_value f.object.to_id %>
        </div>
      </div>
      <div class="form-group">
        <%= f.label :account_id, class: 'col-sm-3 control-label' %>
        <div class="col-sm-2">
          <%= display_value f.object.account.name_with_id %>
        </div>
      </div>
      <div class="form-group">
        <%= f.label :created_at, class: 'col-sm-3 control-label' %>
        <div class="col-sm-2">
          <%= display_value db_formatted_d( f.object.created_at ) %>
        </div>
      </div>
      <div class="form-group">
        <%= f.label :updated_at, class: 'col-sm-3 control-label' %>
        <div class="col-sm-2">
          <%= display_value db_formatted_d( f.object.updated_at ) %>
        </div>
      </div>
      <div class="form-group">
        <div class="col-sm-offset-3 col-sm-2">
          <%= link_to t( 'button_label.edit' ), edit_rfc_document_path( @rfc_document ), class: 'btn btn-lg btn-block btn-default' %>
        </div>
        <div class="col-sm-2">
          <%= link_to t( 'button_label.go_to_index' ), rfc_documents_path, class: 'btn btn-lg btn-block btn-default' %>
        </div>
      </div>
    <% end %>
  </div>
</div>
