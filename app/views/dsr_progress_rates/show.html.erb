<%- page_title %>
<div class="container">
  <%= breadcrumbs %>
  <%= form_title %>
  <div class="form-horizontal" role="form">
    <%= form_for @dsr_progress_rate do |f| %>
      <%= render partial: 'shared/notice' %>
      <div class="form-group">
        <%= f.label :document_status, class: 'col-sm-3 control-label' %>
        <div class="col-sm-1">
          <%= display_value f.object.document_status %>
        </div>
      </div>
      <div class="form-group">
        <%= f.label :label, class: 'col-sm-3 control-label' %>
        <div class="col-sm-3">
          <%= display_value DsrStatusRecord::DSR_STATUS_RECORD_STATUS_LABELS[ f.object.document_status ] %>
        </div>
      </div>
      <div class="form-group">
        <%= f.label :document_progress, class: 'col-sm-3 control-label' %>
        <div class="col-sm-1">
          <%= display_value db_formatted_pct( f.object.document_progress ) %>
        </div>
      </div>
      <div class="form-group">
        <%= f.label :prepare_progress, class: 'col-sm-3 control-label' %>
        <div class="col-sm-1">
          <%= display_value db_formatted_pct( f.object.prepare_progress ) %>
        </div>
      </div>
      <div class="form-group">
        <%= f.label :approve_progress, class: 'col-sm-3 control-label' %>
        <div class="col-sm-1">
          <%= display_value db_formatted_pct( f.object.approve_progress ) %>
        </div>
      </div>
      <div class="form-group">
        <div class="col-sm-offset-3 col-sm-2">
          <%= link_to t( 'button_label.edit' ), edit_dsr_progress_rate_path( @dsr_progress_rate ), class: 'btn btn-lg btn-block btn-default' %>
        </div>
        <div class="col-sm-2">
          <%= link_to t( 'button_label.goto_to_list' ), dsr_progress_rates_path, class: 'btn btn-lg btn-block btn-default' %>
        </div>
      </div>
    <% end %>
  </div>
</div>
