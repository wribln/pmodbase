      <div class="form-group">
        <%= form.label :account_id, class: "col-sm-3 control-label" %>
        <div class="col-sm-1">
          <%= form.text_field :account_id, class: "form-control", required: true %>
        </div>
        <div class="col-sm-2">
          <%= link_to t( 'general.accounts_link' ), account_list_path, class: 'btn btn-sm btn-block btn-default', target: '_blank' %>
        </div>
      </div>
      <div class="form-group">
        <%= form.label :pcp_group, class: "col-sm-3 control-label" %>
        <%- if @viewing_group == 3 then -%>
          <%- PcpMember::PCP_GROUP_LABELS.each_with_index do |pgl,pgi| -%>
            <div class="col-sm-2 radio" style="margin-bottom:7px">
              <label><%= form.radio_button :pcp_group, pgi %>&nbsp;<%= pgl %></label>
            </div>
          <%- end -%>
        <%- else -%>
        <div class="col-sm-2">
          <%= display_value form.object.pcp_group_label %>
        </div>
        <%- end -%>
      </div>
      <div class="form-group">
        <%= form.label :to_access, class: "col-sm-3 control-label" %>
        <div class="col-sm-1">
          <%= form.check_box :to_access %>
        </div>
      </div>
      <div class="form-group">
        <%= form.label :to_update, class: "col-sm-3 control-label" %>
        <div class="col-sm-1">
          <%= form.check_box :to_update %>
        </div>
      </div>

