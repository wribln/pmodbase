<%- page_title %>
<div class="container">
  <%= breadcrumbs %>
  <%= form_title_w_link( @pcp_subject.subject_title, pcp_subject_path( @pcp_subject )) %>
  <div class="form-horizontal" role="form">
    <%= form_for @pcp_member do |f| %>
      <%= render partial: 'shared/notice' %>
      <div class="form-group">
        <%= f.label :account, class: 'col-sm-3 control-label' %>
        <div class="col-sm-1">
          <%= display_value f.object.account_id %>
        </div>
        <div class="col-sm-4">
          <p class="form-control-static"><%= link_to_contact_list f.object.account %></p>
        </div>
      </div>
      <div class="form-group">
        <%= f.label :pcp_group, class: 'col-sm-3 control-label' %>
        <div class="col-sm-2">
          <p class="form-control-static"><%= f.object.pcp_group_label %></p>
        </div>
      </div>
      <div class="form-group">
        <%= f.label :to_access, class: 'col-sm-3 control-label' %>
        <div class="col-sm-4">
          <%= display_check_box f.object.to_access %>
        </div>
      </div>
      <div class="form-group">
        <%= f.label :to_update, class: 'col-sm-3 control-label' %>
        <div class="col-sm-4">
          <%= display_check_box f.object.to_update %>
        </div>
      </div>
      <div class="form-group">
        <div class="col-sm-offset-3 col-sm-2">
          <%= link_to t( 'button_label.edit' ), edit_pcp_member_path( @pcp_member ), class: 'btn btn-lg btn-block btn-default' %>
        </div>
        <div class="col-sm-2">
          <%= link_to t( 'button_label.goto_to_list' ), pcp_subject_pcp_members_path( @pcp_subject ), class: 'btn btn-lg btn-block btn-default' %>
        </div>
      </div>
    <% end %>
  </div>
</div>
