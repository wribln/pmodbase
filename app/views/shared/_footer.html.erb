<p class="hidden-print">&copy; Wilfried R&ouml;mer 2014-2016&nbsp;|
  All Rights Reserved&nbsp;|
  <% unless feature_identifier == FEATURE_ID_HOME_PAGE -%>
    <%= link_to_cr( 'Request a Change', feature_identifier, ( defined?( cr_details )&& cr_details )) -%>&nbsp;| 
  <% end -%>
  <%= link_to_help( defined?( help_page ) && help_page ? help_page : controller_name, t( 'button_label.help' ))-%></p>
