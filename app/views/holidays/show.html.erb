<%- page_title %>
<div class="container">
  <%= breadcrumbs %>
  <%= form_title %>
  <div class="form-horizontal" role="form">
    <%= form_for @holiday do |h| %>
      <%= render partial: 'shared/notice' %>
      <div class="form-group">
        <%= h.label :id, class: 'col-sm-3 control-label' %>
        <div class="col-sm-2">
          <%= display_value h.object.to_id %>
        </div>
      </div>
      <div class="form-group">
        <%= h.label :country_name_id, class: 'col-sm-3 control-label' %>
        <div class="col-sm-2">
          <%= display_value h.object.country_name.try( :code ) %>
        </div>
      </div>
      <div class="form-group">
        <%= h.label :region_name_id, class: 'col-sm-3 control-label' %>
        <div class="col-sm-2">
          <%= display_value h.object.region_name.try( :code ) %>
        </div>
      </div>
      <div class="form-group">
        <%= h.label :date_from, class: 'col-sm-3 control-label' %>
        <div class="col-sm-2">
          <%= display_value db_formatted_d( h.object.date_from )  %>
        </div>
      </div>
      <div class="form-group">
        <%= h.label :date_until, class: 'col-sm-3 control-label' %>
        <div class="col-sm-2">
          <%= display_value db_formatted_d( h.object.date_until ) %>
        </div>
      </div>
      <div class="form-group">
        <%= h.label :description, class: 'col-sm-3 control-label' %>
        <div class="col-sm-5">
          <%= display_value h.object.description %>
        </div>
      </div>
      <div class="form-group">
        <%= h.label :work, class: 'col-sm-3 control-label' %>
        <div class="col-sm-1">
          <%= display_value h.object.work %>
        </div>
        <div class="help-block"><strong>%</strong></div>
      </div>
      <div class="form-group">
        <div class="col-sm-offset-3 col-sm-2">
          <%= link_to t( 'button_label.edit' ), edit_holiday_path( @holiday ), class: 'btn btn-lg btn-block btn-default' %>
        </div>
        <div class="col-sm-2">
          <%= link_to t( 'button_label.add' ), add_holiday_path( @holiday ), class: 'btn btn-lg btn-block btn-default' %>
        </div>
        <div class="col-sm-2">
          <%= link_to t( 'button_label.go_to_index' ), holidays_path, class: 'btn btn-lg btn-block btn-default' %>
        </div>
      </div>
    <% end %>
  </div>
</div>
