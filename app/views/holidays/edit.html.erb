<%- page_title %>
<div class="container">
  <%= breadcrumbs %>
  <%= form_title %>
  <div class="form-horizontal" role="form">
    <%= form_for @holiday do |h| %>
      <%= render partial: 'shared/errors', object: @holiday.errors %>
      <%= render partial: 'form', object: h %>
      <div class="form-group">
        <div class="col-sm-offset-3 col-sm-2">
          <%= h.submit class: "btn btn-lg btn-block btn-primary" %>
        </div>
        <div class="col-sm-2">
          <%= link_to t( 'button_label.cancel' ), holiday_path( @holiday ), class: "btn btn-lg btn-block btn-default" %>
        </div>
      </div>
    <% end %>
  </div>
</div>