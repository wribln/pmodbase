<%- page_title %>
<div class="container">
  <%= breadcrumbs %>
  <%= form_title %>
  <div class="form-horizontal" role="form">
    <%= form_for @region_name do |rn| %>
      <%= render partial: 'shared/errors', object: @region_name.errors %>
      <%= render partial: 'form', object: rn %>
      <div class="form-group">
        <div class="col-sm-offset-3 col-sm-2">
          <%= rn.submit class: 'btn btn-lg btn-block btn-primary' %>
        </div>
        <div class="col-sm-2">
          <%= link_to t( 'button_label.cancel' ), region_name_path( @region_name ), class: 'btn btn-lg btn-block btn-default' %>
        </div>
      </div>
    <% end %>
  </div>
</div>