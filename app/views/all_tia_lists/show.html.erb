<%- page_title %>
<div class="container">
  <%= breadcrumbs %>
  <%= form_title %>
  <div class="form-horizontal" role="form">
    <%= form_for @tia_list, url: all_tia_lists_path do |f| %>
      <%= render partial: 'shared/notice' %>
      <div class="form-group">
        <%= f.label :id, class: "col-sm-3 control-label" %>
        <div class="col-sm-1">
          <%= display_value f.object.id %>
        </div>
      </div>
      <div class="form-group">
        <%= f.label :code, class: "col-sm-3 control-label" %>
        <div class="col-sm-1">
          <%= display_value f.object.code %>
        </div>
      </div>
      <div class="form-group">
        <%= f.label :label, class: "col-sm-3 control-label" %>
        <div class="col-sm-4">
          <%= display_value f.object.label %>
        </div>
      </div>
      <div class="form-group">
        <%= f.label :owner_account_id, class: "col-sm-3 control-label" %>
        <div class="col-sm-1">
          <%= display_value f.object.owner_account_id %>
        </div>
        <div class="col-sm-4">
          <p class="form-control-static"><%= link_to_account( f.object.owner_account )%></p>
        </div>
      </div>
      <div class="form-group">
        <%= f.label :deputy_account_id, class: "col-sm-3 control-label" %>
        <div class="col-sm-1">
          <%= display_value f.object.deputy_account_id %>
        </div>
        <div class="col-sm-4">
          <p class="form-control-static"><%= link_to_account( f.object.deputy_account )%></p>
        </div>
      </div>
      <!-- tia members list -->
      <%= render partial: 'tia_member_header', locals: { action_type: :show } %>
      <% if f.object.tia_members.empty? %>
      <div class="form-group">
        <div class="col-sm-offset-1 col-sm-4"><%= t( 'tia_lists.no_members_info' )%></div>
      </div>
      <% else %>
        <%= f.fields_for :tia_members, f.object.tia_members do |m| %>
          <%= render partial: 'tia_member', locals: { tia_member: m, action_type: :show } %>
        <% end %>
      <% end %>
      <%= render partial: 'tia_member_footer' %>
      <div class="form-group">
        <div class="col-sm-offset-3 col-sm-2">
          <%= link_to t( 'button_label.edit' ), edit_all_tia_list_path( @tia_list ), class: "btn btn-lg btn-block btn-default" %>
        </div>
        <div class="col-sm-2">
          <%= link_to t( 'button_label.goto_to_list' ), all_tia_lists_path, class: "btn btn-lg btn-block btn-default" %>
        </div>
      </div>
    <% end %>
  </div>
</div>
