<%- page_title %>
<div class="container">
  <%= breadcrumbs %>
  <%= form_title %>
  <div class="form-horizontal" role="form">
    <%= form_for @dcc_code do |fc| %>
      <%= render partial: 'shared/notice' %>
      <div class="form-group">
        <%= fc.label :id, class: 'col-sm-3 control-label' %>
        <div class="col-sm-2">
          <%= display_value fc.object.to_id %>
        </div>
      </div>
      <div class="form-group">
        <%= fc.label :code, class: 'col-sm-3 control-label' %>
        <div class="col-sm-2">
          <%= display_value fc.object.code %>
        </div>
      </div>
      <div class="form-group">
        <%= fc.label :label, class: 'col-sm-3 control-label' %>
        <div class="col-sm-4">
          <%= display_value fc.object.label %>
        </div>
      </div>
      <div class="form-group">
        <%= fc.label :active, class: 'col-sm-3 control-label' %>
        <div class="col-sm-1">
          <%= display_check_box fc.object.active %>
        </div>
      </div>
      <div class="form-group">
        <%= fc.label :master, class: 'col-sm-3 control-label' %>
        <div class="col-sm-1">
          <%= display_check_box fc.object.master %>
        </div>
      </div>
      <div class="form-group">
        <%= fc.label :standard, class: 'col-sm-3 control-label' %>
        <div class="col-sm-1">
          <%= display_check_box fc.object.standard %>
        </div>
      </div>
      <div class="form-group">
        <%= fc.label :heading, class: 'col-sm-3 control-label' %>
        <div class="col-sm-1">
          <%= display_check_box fc.object.heading %>
        </div>
      </div>
      <div class="form-group">
        <%= fc.label :note, class: 'col-sm-3 control-label' %>
        <div class="col-sm-6">
          <%= display_value fc.object.note %>
        </div>
      </div>
      <div class="form-group">
        <div class="col-sm-offset-3 col-sm-2">
          <%= link_to t( 'button_label.edit' ), edit_dcc_code_path( @dcc_code ), class: 'btn btn-lg btn-block btn-default' %>
        </div>
        <div class="col-sm-2">
          <%= link_to t( 'button_label.go_to_index' ), dcc_codes_path, class: 'btn btn-lg btn-block btn-default' %>
        </div>
      </div>
    <% end %>
  </div>
</div>
