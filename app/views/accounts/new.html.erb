<%- page_title %>
<div class="container">
  <%= breadcrumbs %>
  <%= form_title %>
  <div class="form-horizontal" role="form">
    <%= form_for @account do |a| %>
      <%= render partial: 'shared/errors', object: @account.errors %>
      <%= render partial: 'form', object: a %>
      <div class="form-group">
        <div class="col-sm-offset-2 col-sm-2">
          <%= a.submit class: "btn btn-lg btn-block btn-primary" %>
        </div>
        <div class="col-sm-2">
          <%= link_to t( 'button_label.goto_to_list' ), accounts_path, class: "btn btn-lg btn-block btn-default" %>
        </div>
      <div>
    <% end %>
  </div>
</div>
