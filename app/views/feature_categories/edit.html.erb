<%- page_title %>
<div class="container">
  <%= breadcrumbs %>
  <%= form_title %>
  <div class="form-horizontal" role="form">
    <%= form_for @feature_category do |fc| %>
      <%= render partial: 'shared/notice' %>
      <%= render partial: 'shared/errors', object: @feature_category.errors %>
      <%= render partial: 'form', object: fc %>
      <div class="form-group">
        <div class="col-sm-offset-3 col-sm-2">
          <%= fc.submit class: "btn btn-lg btn-block btn-primary" %>
        </div>
        <div class="col-sm-2">
          <%= link_to t( 'button_label.show' ), @feature_category, class: "btn btn-lg btn-block btn-default" %>
        </div>
        <div class="col-sm-2">
          <%= link_to t( 'button_label.goto_to_list' ), feature_categories_path, class: "btn btn-lg btn-block btn-default" %>
        </div>
      <div>
    <% end %>
  </div>
</div>
