      <div class="form-group">
        <%= form.label :id, class: "col-sm-3 control-label" %>
        <div class="col-sm-2">
          <%= display_value form.object.id %>
        </div>
      </div>
      <div class="form-group">
        <%= form.label :code, class: "col-sm-3 control-label" %>
        <div class="col-sm-2">
          <%= form.text_field :code, class: "form-control", maxlength: MAX_LENGTH_OF_CODE, required: true %>
        </div>
      </div>
      <div class="form-group">
        <%= form.label :label, class: "col-sm-3 control-label" %>
        <div class="col-sm-4">
          <%= form.text_field :label, class: "form-control", maxlength: MAX_LENGTH_OF_LABEL, required: true %>
        </div>
      </div>
      <div class="form-group">
        <%= form.label :notes, class: "col-sm-3 control-label" %>
        <div class="col-sm-4">
          <%= form.text_field :notes, class: "form-control", maxlength: MAX_LENGTH_OF_NOTE %>
        </div>
      </div>
      <div class="form-group">
        <%= form.label :seqno, class: "col-sm-3 control-label" %>
        <div class="col-sm-2">
          <%= form.text_field :seqno, class: "form-control", required: true %>
        </div>
      </div>
      <div class="form-group">
        <%= form.label :group_category_id, class: "col-sm-3 control-label" %>
        <div class="col-sm-4">
          <%= form.collection_select :group_category_id, @group_categories, :id, :label, { prompt: ( action_name == 'new' ? t( 'general.select_prompt' ) : true )}, { class: "form-control", required: true } %>
        </div>
      </div>
