<div class="form-group form-set" <%- if( sir_member.object._destroy || sir_member.index == 'template' )%>style="display:none"<% end %>>
  <%- if action_type == :show -%>
    <div class="col-sm-offset-1 col-sm-1">
      <%= sir_member.label :account_id, class: 'hidden-md hidden-lg control-label' %>
      <%= display_value sir_member.object.account_id %>
    </div>
    <div class="col-sm-2">
      <p class="form-control-static"><%= link_to_contact_list( sir_member.object.account )%></p>
    </div>
    <div class="col-sm-2">
      <%= sir_member.label :to_access, class: 'hidden-md hidden-lg control-label' %>
      <%= sir_member.check_box :to_access, disabled: true, readonly: true %>
    </div>
    <div class="col-sm-2">
      <%= sir_member.label :to_access, class: 'hidden-md hidden-lg control-label' %>
      <%= sir_member.check_box :to_update, disabled: true, readonly: true %>
    </div>
  <%- else -%>
    <div class="col-sm-1">
      <%= sir_member.hidden_field :_destroy %>
      <%= link_to '-', '#', class: 'btn btn-warning btn-default btn-block del-subform-button' %>
    </div>
    <div class="col-sm-1">
      <%= sir_member.label :account_id, class: 'hidden-md hidden-lg control-label' %>
      <%= sir_member.text_field :account_id, class: 'form-control' %>
    </div>
    <div class="col-sm-offset-2 col-sm-2">
      <%= sir_member.label :to_access, class: 'hidden-md hidden-lg control-label' %>
      <%= sir_member.check_box :to_access %>
    </div>
    <div class="col-sm-2">
      <%= sir_member.label :to_update, class: 'hidden-md hidden-lg control-label' %>
      <%= sir_member.check_box :to_update %>
    </div>
    <%- if sir_member.object.errors.any? -%>
    <div class="col-sm-4">
      <% sir_member.object.errors.full_messages.each do |m| %>
        <p class="btn-sm bg-danger"><%= m %></p>
      <%- end -%>
    </div>
    <%- end -%>
  <%- end -%>
</div>