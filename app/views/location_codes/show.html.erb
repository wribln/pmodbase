<%- page_title %>
<div class="container">
  <%= breadcrumbs %>
  <%= form_title %>
  <div class="form-horizontal" role="form">
    <%= form_for @location_code do |f| %>
      <%= render partial: 'shared/notice' %>
      <div class="form-group">
        <%= f.label :id, class: 'col-sm-3 control-label' %>
        <div class="col-sm-2">
          <%= display_value f.object.to_id %>
        </div>
      </div>
      <div class="form-group">
        <%= f.label :code, class: 'col-sm-3 control-label' %>
        <div class="col-sm-2">
          <%= display_value f.object.code %>
        </div>
      </div>
      <div class="form-group">
        <%= f.label :label, class: 'col-sm-3 control-label' %>
        <div class="col-sm-6">
          <%= display_value f.object.label %>
        </div>
      </div>
      <div class="form-group">
        <%= f.label :loc_type, class: 'col-sm-3 control-label' %>
        <div class="col-sm-2">
          <%= display_value f.object.loc_type_label %>
        </div>
      </div>
      <div class="form-group">
        <%= f.label :center_point, class: 'col-sm-3 control-label' %>
        <div class="col-sm-2">
          <%= display_value db_formatted_km( f.object.center_point )%>
        </div>
      </div>
      <div class="form-group">
        <%= f.label :start_point, class: 'col-sm-3 control-label' %>
        <div class="col-sm-2">
          <%= display_value db_formatted_km( f.object.start_point )%>
        </div>
      </div>
      <div class="form-group">
        <%= f.label :end_point, class: 'col-sm-3 control-label' %>
        <div class="col-sm-2">
          <%= display_value db_formatted_km( f.object.end_point )%>
        </div>
      </div>
      <div class="form-group">
        <%= f.label :length, class: 'col-sm-3 control-label' %>
        <div class="col-sm-2">
          <%= display_value db_formatted_number( f.object.length )%>
        </div>
      </div>
      <div class="form-group">
        <%= f.label :part_of, class: 'col-sm-3 control-label' %>
        <div class="col-sm-6">
          <%= display_value f.object.part_of.try :code_and_label %>
        </div>
      </div>
      <div class="form-group">
        <%= f.label :remarks, class: 'col-sm-3 control-label' %>
        <div class="col-sm-6">
          <%= display_lines f.object.remarks %>
        </div>
      </div>
      <div class="form-group">
        <div class="col-sm-offset-3 col-sm-2">
          <%= link_to t( 'button_label.edit' ), edit_location_code_path( @location_code ), class: 'btn btn-lg btn-block btn-default' %>
        </div>
        <div class="col-sm-2">
          <%= link_to t( 'button_label.go_to_index' ), location_codes_path, class: 'btn btn-lg btn-block btn-default' %>
        </div>
      </div>
    <% end %>
  </div>
</div>
