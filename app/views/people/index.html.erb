<%- page_title %>
<div class="container">
  <%= breadcrumbs %>
  <%= form_title %>
  <div class="table-responsive">
    <%= will_paginate @people %>
    <table class="table table-striped table-bordered">
      <thead>
        <tr>
          <th><%= Person.human_attribute_name( :id            )%></th>
          <th><%= Person.human_attribute_name( :formal_name   )%></th>
          <th><%= Person.human_attribute_name( :informal_name )%></th>
          <th><%= Person.human_attribute_name( :email         )%></th>
          <th><%= Person.human_attribute_name( :involved      )%></th>
          <th><%= t( 'action_title.header'  )%></th>
        </tr>
      </thead>
      <tbody>
      <% if @people.length.zero? %>
        <%= render partial: 'shared/index_empty_row', locals:{ columns: 5, with_link: true } %>
      <% else %>
        <% @people.each do |p| %>
          <tr>
            <td><%= p.to_id %></td>
            <td><%= p.formal_name %></td>
            <td><%= p.informal_name %></td>
            <td><%= p.email %></td>
            <td><%= display_boolean( p.involved )%></td>
            <td><%= render partial: 'shared/actions', object: p %></td>
          </tr>
        <% end %>
      <% end %>
      </tbody>
    </table>
    <%= render partial: 'shared/footer' %>
  </div>
</div>
