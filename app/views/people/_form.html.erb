      <div class="form-group">
        <%= form.label :id, class: "col-sm-3 control-label" %>
        <div class="col-sm-2">
          <%= display_value form.object.id %>
        </div>
      </div>
      <div class="form-group">
        <%= form.label :formal_name, class: "col-sm-3 control-label" %>
        <div class="col-sm-4">
          <%= form.text_field :formal_name, class: "form-control", maxlength: MAX_LENGTH_OF_PERSON_NAMES %>
        </div>
      </div>
      <div class="form-group">
        <%= form.label :informal_name, class: "col-sm-3 control-label" %>
        <div class="col-sm-4">
          <%= form.text_field :informal_name, class: "form-control", maxlength: MAX_LENGTH_OF_PERSON_NAMES %>
        </div>
      </div>
      <div class="form-group">
        <%= form.label :email, class: "col-sm-3 control-label" %>
        <div class="col-sm-4">
          <%= form.email_field :email, class: "form-control", maxlength: MAX_LENGTH_OF_EMAIL_STRING %>
        </div>
      </div>
      <div class="form-group">
        <%= form.label :involved, class: "col-sm-3 control-label" %>
        <div class="col-sm-2">
          <%= form.check_box :involved %>
        </div>
      </div>
