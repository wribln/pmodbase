<%- page_title %>
<div class="container">
  <%= breadcrumbs %>
  <%= form_title %>
  <div class="form-horizontal" role="form">
    <%= form_for @person do |p| %>
      <%= render partial: 'shared/errors', object: @person.errors %>
      <%= render partial: 'form', object: p %>
      <div class="form-group">
        <div class="col-sm-offset-3 col-sm-2">
          <%= p.submit class: "btn btn-lg btn-block btn-primary" %>
        </div>
        <div class="col-sm-2">
          <%= link_to t( 'button_label.goto_to_list' ), people_path, class: "btn btn-lg btn-block btn-default" %>
        </div>
      </div>
    <% end %>
  </div>
</div>
