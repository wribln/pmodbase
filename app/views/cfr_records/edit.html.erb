<%- page_title %>
<div class="container">
  <%= breadcrumbs %>
  <%= form_title %>
  <div class="form-horizontal" role="form">
    <%= form_for @cfr_record do |f| %>
      <%= render partial: 'shared/errors', object: @cfr_record.errors %>
      <%= render partial: 'form', object: f %>
      <!-- button to add another contact info record -->
      <div class="form-group">
        <div class="col-sm-1">
          <%= link_to '+', '#', class: 'btn btn-info btn-default btn-block add-subform-button' %>
        </div>
        <label class="col-sm-4"><%= t( 'cfr_records.form.add_label' )%></label>
      </div>
      <div class="form-group">
        <div class="col-sm-offset-3 col-sm-2">
          <%= f.submit t( 'button_label.defaults' ), class: 'btn btn-lg btn-block btn-default' %>
        </div>
        <div class="col-sm-2">
          <%= f.submit class: 'btn btn-lg btn-block btn-primary' %>
        </div>
        <div class="col-sm-2">
          <%= link_to t( 'button_label.cancel_to_show' ), @cfr_record, class: 'btn btn-lg btn-block btn-default' %>
        </div>
      <div>
    <% end %>
  </div>
</div>
