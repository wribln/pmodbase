<%- page_title %>
<div class="container">
  <%= breadcrumbs %>
  <h3>Details on Task/Issue/Action Item</h3>
  <div class="table-responsive col-sm-6">
    <table class="table table-striped table-bordered table-condensed">
      <caption>Status as of <%= db_formatted_dt( @tia_item.updated_at )%>:</caption>
      <thead style="display: none"><tr><th class="col-sm-2"></th><th class="col-sm-4"></th></tr></thead>
      <tbody>
        <tr><td class="col-sm-2"><%= TiaItem.human_attribute_name( :item_id     )%></td><td><%= @tia_list.item_code( @tia_item.seqno )%></td></tr>
        <tr><td class="col-sm-2"><%= TiaItem.human_attribute_name( :description )%></td><td><%= @tia_item.description %></td></tr>
        <tr><td class="col-sm-2"><%= TiaItem.human_attribute_name( :comment     )%></td><td><%= @tia_item.comment %></td></tr>
        <tr><td class="col-sm-2"><%= TiaItem.human_attribute_name( :prio        )%></td><td><%= @tia_item.prio_label %></td></tr>
        <tr><td class="col-sm-2"><%= TiaItem.human_attribute_name( :owner       )%></td><td><%= @tia_item.account.user_name unless @tia_item.account.nil? %></td></tr>
        <tr><td class="col-sm-2"><%= TiaItem.human_attribute_name( :status      )%></td><td><%= @tia_item.status_label %></td></tr>
        <tr><td class="col-sm-2"><%= TiaItem.human_attribute_name( :due_date    )%></td><td><%= db_formatted_d( @tia_item.due_date )%></td></tr>
        <tr><td class="col-sm-2"><%= TiaItem.human_attribute_name( :archived    )%></td><td><%= display_boolean @tia_item.archived, :yesno %></td></tr>
     </tbody>        
    </table>
    <%- @tia_item.tia_updates.each do |tu| %>
    <table class="table table-striped table-bordered table-condensed">
      <caption>Status as of <%= db_formatted_dt( tu.created_at )%>:</caption>
      <thead style="display: none"><tr><th class="col-sm-2"></th><th class="col-sm-4"></th></tr></thead>
      <tbody>
        <%- unless tu.description.nil? %><tr><td class="col-sm-2"><%= TiaItem.human_attribute_name( :description )%></td><td><%= tu.description %></td></tr><%- end -%>
        <%- unless tu.comment.nil?     %><tr><td class="col-sm-2"><%= TiaItem.human_attribute_name( :comment     )%></td><td><%= tu.comment %></td></tr><%- end -%>
        <%- unless tu.prio.nil?        %><tr><td class="col-sm-2"><%= TiaItem.human_attribute_name( :prio        )%></td><td><%= tu.prio_label %></td></tr><%- end -%>
        <%- unless tu.account_id.nil?  %><tr><td class="col-sm-2"><%= TiaItem.human_attribute_name( :owner       )%></td><td><%= tu.account.user_name unless tu.account.nil? %></td></tr><%- end -%>
        <%- unless tu.status.nil?      %><tr><td class="col-sm-2"><%= TiaItem.human_attribute_name( :status      )%></td><td><%= tu.status_label %></td></tr><%- end -%>
        <%- unless tu.due_date.nil?    %><tr><td class="col-sm-2"><%= TiaItem.human_attribute_name( :due_date    )%></td><td><%= db_formatted_d( tu.due_date )%></td></tr><%- end -%>
        <%- unless tu.archived.nil?    %><tr><td class="col-sm-2"><%= TiaItem.human_attribute_name( :archived    )%></td><td><%= display_boolean tu.archived, :yesno %></td></tr><%- end -%>
      </tbody>        
    </table>
    <%- end %>
    <table class="table table-striped table-bordered table-condensed">
    	<caption>Item created at: <%= db_formatted_dt( @tia_item.created_at )%></caption>
    </table>
  </div>
</div>
