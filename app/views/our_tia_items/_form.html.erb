      <div class="form-group">
        <%= form.label :item_id, class: "col-sm-3 control-label" %>
        <div class="col-sm-2">
          <%= display_value form.object.tia_list.item_code( form.object.seqno )%>
        </div>
      </div>
      <div class="form-group">
        <%= form.label :description, class: "col-sm-3 control-label" %>
        <div class="col-sm-6">
          <%- if comment_only then -%>
            <%= display_lines form.object.description %>
          <%- else -%>
            <%= form.text_area :description, cols: DEFAULT_COLS_TEXTAREA, rows: DEFAULT_ROWS_TEXTAREA, maxlength: MAX_LENGTH_OF_DESCRIPTION, class: "form-control" %>
          <%- end -%>
        </div>
      </div>
      <div class="form-group">
        <%= form.label :comment, class: "col-sm-3 control-label" %>
        <div class="col-sm-6">
          <%= form.text_area :comment, cols: DEFAULT_COLS_TEXTAREA, rows: DEFAULT_ROWS_TEXTAREA, maxlength: MAX_LENGTH_OF_DESCRIPTION, class: "form-control" %>
        </div>
      </div>
      <div class="form-group">
        <%= form.label :prio, class: "col-sm-3 control-label" %>
        <div class="col-sm-2">
          <%- if comment_only then -%>
            <%= display_value form.object.prio %>            
          <%- else -%>
            <%= form.select :prio, select_options( TiaItem::TIA_ITEM_PRIO_LABELS ), {}, { class: "form-control", readonly: comment_only } %>
          <%- end -%>
        </div>
      </div>
      <div class="form-group">
        <%= form.label :account_id, class: "col-sm-3 control-label" %>
        <div class="col-sm-2">
        <%- if comment_only -%>
          <%= display_value form.object.account.try( :user_name )%>
        <%- else -%>
          <%= form.select :account_id, @member_list, { include_blank: true }, { class: 'form-control' }%>
        <%- end -%>
        </div>
      </div>
      <div class="form-group">
        <%= form.label :due_date, class: "col-sm-3 control-label" %>
        <div class="col-sm-2">
          <%= form.text_field :due_date, class: "form-control", readonly: comment_only  %>
        </div>
      </div>
      <div class="form-group">
        <%= form.label :status, class: "col-sm-3 control-label" %>
        <div class="col-sm-2">
        <%- if comment_only -%>
          <%= display_value form.object.status_label %>
        <%- else -%>
          <%= form.select :status, select_options( TiaItem::TIA_ITEM_STATUS_LABELS ), {}, { class: 'form-control' } %>
        <%- end -%>
        </div>
      </div>
      <div class="form-group">
        <%= form.label :archived, class: "col-sm-3 control-label" %>
        <div class="col-sm-1">
        <%- if comment_only -%>
          <%= form.check_box :archived, disabled: true, readonly: true %>
        <%- else -%>
          <%= form.check_box :archived %>
        <%- end -%>
        </div>
      </div>

