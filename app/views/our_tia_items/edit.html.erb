<%- page_title %>
<div class="container">
  <%= breadcrumbs %>
  <%= form_title_w_link( @tia_list.label, my_tia_lists_path ) %>
  <div class="form-horizontal" role="form">
    <%= form_for @tia_item, url: our_tia_item_path( @tia_item ) do |f| %>
      <%= render partial: 'shared/errors', object: @tia_item.errors %>
      <%= render partial: 'form', locals: { form: f, comment_only: false } %>
      <div class="form-group">
        <div class="col-sm-offset-3 col-sm-2">
          <%= f.submit class: 'btn btn-lg btn-block btn-primary' %>
        </div>
        <div class="col-sm-2">
          <%= link_to t( 'button_label.cancel_to_show' ), our_tia_item_path( @tia_item ), class: 'btn btn-lg btn-block btn-default' %>
        </div>
      <div>
    <% end %>
  </div>
</div>
