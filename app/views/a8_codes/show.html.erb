<%- page_title %>
<div class="container">
  <%= breadcrumbs %>
  <%= form_title %>
  <div class="form-horizontal" role="form">
    <%= form_for @a8_code do |f| %>
      <%= render partial: 'shared/notice' %>
      <div class="form-group">
        <%= f.label :id, class: 'col-sm-3 control-label' %>
        <div class="col-sm-1">
          <%= display_value f.object.id %>
        </div>
      </div>
      <div class="form-group">
        <%= f.label :code, class: 'col-sm-3 control-label' %>
        <div class="col-sm-2">
          <%= display_value f.object.code %>
        </div>
      </div>
      <div class="form-group">
        <%= f.label :label, class: 'col-sm-3 control-label' %>
        <div class="col-sm-4">
          <%= display_value f.object.label %>
        </div>
      </div>
      <div class="form-group">
        <%= f.label :active, class: 'col-sm-3 control-label' %>
        <div class="col-sm-4">
          <%= f.check_box :active, disabled: true, readonly: true %>
        </div>
      </div>
      <div class="form-group">
        <%= f.label :master, class: 'col-sm-3 control-label' %>
        <div class="col-sm-4">
          <%= f.check_box :master, disabled: true, readonly: true %>
        </div>
      </div>
      <div class="form-group">
        <%= f.label :mapping, class: 'col-sm-3 control-label' %>
        <div class="col-sm-4">
          <%= display_value f.object.mapping %>
        </div>
      </div>
      <div class="form-group">
        <div class="col-sm-offset-3 col-sm-2">
          <%= link_to t( 'button_label.edit' ), edit_a8_code_path( @a8_code ), class: 'btn btn-lg btn-block btn-default' %>
        </div>
        <div class="col-sm-2">
          <%= link_to t( 'button_label.goto_to_list' ), a8_codes_path, class: 'btn btn-lg btn-block btn-default' %>
        </div>
      </div>
    <% end %>
  </div>
</div>
