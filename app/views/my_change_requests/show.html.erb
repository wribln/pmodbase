<%- page_title %>
<div class="container">
  <%= breadcrumbs %>
  <%= form_title %>
  <div class="form-horizontal" role="form">
    <%= form_for @dbcr, url: my_change_requests_path do |d| %>
      <%= render partial: 'shared/notice' %>
      <div class="form-group">
        <%= d.label :id, class: 'col-sm-3 control-label' %>
        <div class="col-sm-2">
          <%= display_value d.object.to_id %>
        </div>
      </div>
      <div class="form-group">
        <%= d.label :requesting_account_id, class: 'col-sm-3 control-label' %>
        <div class="col-sm-3">
          <%= display_value d.object.req_account.person.name_with_id %>
        </div>
      </div>
      <div class="form-group">
        <%= d.label :feature_id, class: 'col-sm-3 control-label' %>
        <div class="col-sm-4">
          <%= d.hidden_field :feature_id %>
          <%= display_value d.object.feature_label_with_id %>
        </div>
      </div>
      <div class="form-group">
        <%= d.label :detail, class: 'col-sm-3 control-label' %>
        <div class="col-sm-2">
          <%= display_value d.object.detail %>
        </div>
      </div>
      <div class="form-group">
        <%= d.label :action, class: 'col-sm-3 control-label' %>
        <div class="col-sm-2">
          <%= display_value d.object.action %>
        </div>
      </div>
      <div class="form-group">
        <%= d.label :request_text, class: 'col-sm-3 control-label' %>
        <div class="col-sm-4">
          <%= display_lines d.object.request_text %>
        </div>
      </div>
      <div class="form-group">
        <div class="col-sm-offset-3 col-sm-2">
          <%= link_to t( 'button_label.edit' ), edit_my_change_request_path( @dbcr ), class: 'btn btn-lg btn-block btn-default' %>
        </div>
        <div class="col-sm-2">
          <%= link_to t( 'button_label.go_to_index' ), my_change_requests_path, class: 'btn btn-lg btn-block btn-default' %>
        </div>
      <div>
    <% end %>
  </div>
</div>
