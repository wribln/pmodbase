<%- page_title %>
<div class="container-fluid">
  <%= breadcrumbs %>
  <%= form_title %>
  <div class="table-responsive">
    <table class="table table-striped table-bordered">
      <thead>
        <tr>
          <th><%= StandardsBody.human_attribute_name( :id          ) %></th>
          <th><%= StandardsBody.human_attribute_name( :code        ) %></th>
          <th><%= StandardsBody.human_attribute_name( :description ) %></th>
          <th><%= t( 'action_title.header' ) -%></th>
        </tr>
      </thead>
        <% if @standards_bodies.length.zero? %>
          <%= render partial: 'shared/index_empty_row', locals:{ columns: 3, with_link: true }%>
        <% else %>
          <% @standards_bodies.each do |sb| %>
            <tr>
              <td><%= sb.to_id %></td>
              <td><%= sb.code %></td>
              <td><%= sb.description %></td>
              <td><%= render partial: 'shared/actions', object: sb %></td>
            </tr>
          <% end %>
        <% end %>
      </tbody>
    </table>
    <%= render partial: 'shared/download_xls' %>
    <%= render partial: 'shared/footer' %>
  </div>
</div>
