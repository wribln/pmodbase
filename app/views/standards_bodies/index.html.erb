<%- page_title %>
<div class="container">
  <%= breadcrumbs %>
  <%= form_title %>
  <div class="table-responsive col-sm-9">
    <table class="table table-striped table-bordered">
      <thead>
        <tr>
          <th class="col-sm-2"><%= StandardsBody.human_attribute_name( :code        )%></th>
          <th class="col-sm-6"><%= StandardsBody.human_attribute_name( :description )%></th>
          <th class="col-sm-1 hidden-print"><%= t( 'action_title.header' )%></th>
        </tr>
      </thead>
        <% if @standards_bodies.length.zero? %>
          <%= render partial: 'shared/index_empty_row', locals:{ columns: 2, with_link: true }%>
        <% else %>
          <% @standards_bodies.each do |sb| %>
            <tr>
              <td><%= sb.code %></td>
              <td><%= sb.description %></td>
              <td><%= render partial: 'shared/actions', object: sb %></td>
            </tr>
          <% end %>
        <% end %>
      </tbody>
    </table>
    <%= render partial: 'shared/download_xls' %>
    <%= render partial: 'shared/footer' %>
  </div>
</div>
