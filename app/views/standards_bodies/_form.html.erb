      <div class="form-group">
        <%= form.label :id, class: "col-sm-3 control-label" %>
        <div class="col-sm-1">
          <%= display_value form.object.id %>
        </div>
      </div>
      <div class="form-group">
        <%= form.label :code, class: "col-sm-3 control-label" %>
        <div class="col-sm-2">
          <%= form.text_field :code, class: "form-control", max_length: MAX_LENGTH_OF_CODE, required: true %>
        </div>
      </div>
      <div class="form-group">
        <%= form.label :description, class: "col-sm-3 control-label" %>
        <div class="col-sm-6">
          <%= form.text_field :description, class: "form-control", max_length: MAX_LENGTH_OF_DESCRIPTION, required: true %>
        </div>
      </div>
