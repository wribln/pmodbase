<%- page_title %>
<div class="container">
  <%= breadcrumbs %>
  <%= form_title %>
  <div class="table-responsive col-sm-6">
    <table class="table table-striped table-bordered table-condensed">
      <thead>
        <tr>
          <th><%= t( 'statistics.description' )%></th>
          <th class="col-sm-1"><%= t( 'statistics.category' ) %></th>
          <th class="col-sm-1 th-right"><%= t( 'statistics.count' ) %></th>
        </tr>
      </thead>
      <tbody>
        <% @statistics.each do | t | %>
          <% t.each_with_index do | cat, index | %>
            <tr>
              <% if index == 0 %>
                <%= content_tag :td, cat[ 0 ] %>
                <%= content_tag :td, cat[ 1 ] %>
                <%= content_tag :td, cat[ 2 ], { class: 'td-right' } %>
              <% else %>
                <td>&nbsp;</td>
                <%= content_tag :td, cat[ 0 ] %>
                <%= content_tag :td, cat[ 1 ], { class: 'td-right' } %>
              <% end %>
            </tr>
          <% end %>
        <% end %>
      </tbody>
    </table>
    <%= render partial: 'shared/footer' %>
  </div>
</div>
