<%- page_title %>
<div class="container">
  <%= breadcrumbs %>
  <%= form_title %>
  <div class="form-horizontal" role="form">
    <%= form_for @isr_interface do |f| %>
      <%= render partial: 'shared/errors', object: @isr_interface.errors %>
      <%= render partial: 'form', object: f %>
      <div class="form-group">
        <%- if confirm_or_reject -%>
          <div class="col-sm-offset-3 col-sm-2">
            <%= f.submit t( '.confirm' ), class: 'btn btn-lg btn-block btn-default' %>
          </div>
          <div class="col-sm-2">
            <%= f.submit t( '.reject' ), class: 'btn btn-lg btn-block btn-default' %>
          </div>
        <%- else -%>
          <div class="col-sm-offset-3 col-sm-2">
            <%= f.submit class: 'btn btn-lg btn-block btn-primary' %>
          </div>
        <%- end -%>
        <div class="col-sm-2">
          <%= link_to t( 'button_label.cancel_to_show' ), @isr_interface, class: 'btn btn-lg btn-block btn-default' %>
        </div>
      <div>
    <% end %>
  </div>
</div>
