<%- page_title %>
<div class="container">
  <%= breadcrumbs %>
  <%= form_title_i @isr_agreement.ia_type %>
  <div class="form-horizontal" role="form">
    <%= form_for @isr_interface do |f| %>
      <%= render partial: 'shared/errors', object: @isr_interface.errors %>
      <%= render partial: 'shared/errors', object: @isr_agreement.errors %>
      <%= fields_for @isr_interface do |f| %>
        <%- if @isr_interface.frozen? %>
          <%= render partial: 'show_if', object: f, locals:{ note: :edit, if_code: true }%>
        <%- else %>
          <%= render partial: 'form_if', object: f, locals:{ note: :edit, if_code: true } %>
        <%- end %>
      <%- end %>
      <!-- Divider Line -->
      <div class="form-group">
        <hr style="margin:4px"/>  
      </div>
      <%= fields_for @isr_agreement do |a| %>
        <%= render partial: 'form_ia', object: a %>
      <%- end -%>
      <!-- Divider Line -->
      <div class="form-group">
        <hr style="margin:4px"/>  
      </div>
      <div class="form-group">
        <div class="col-sm-offset-3 col-sm-2">
          <%= f.submit class: 'btn btn-lg btn-block btn-primary' %>
        </div>
        <div class="col-sm-2">
          <%= link_to t( 'button_label.cancel_to_index' ), isr_interfaces_path, class: 'btn btn-lg btn-block btn-default' %>
        </div>
      <div>
    <% end %>
  </div>
</div>
