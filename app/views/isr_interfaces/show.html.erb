<%- page_title %>
<div class="container">
  <%= breadcrumbs %>
  <%= form_title_w( @isr_interface.code ) %>
  <div class="form-horizontal" role="form">
    <%= form_for @isr_interface do |f| %>
      <%= render partial: 'shared/notice' %>
      <%= render partial: 'show_if', locals:{ if_code: true, note: true }%>
      <!-- Divider Line -->
      <div class="form-group">
        <hr style="margin:4px"/>  
      </div>
      <!-- Agreements -->
      <%- if @isr_agreements.empty? -%>
        <div class="form-group">
          <div class="col-sm-offset-3 col-sm-4"><%= t( '.no_agreements' ) %></div>
        </div>
      <%- else -%>
        <%- @isr_agreements.each do |isa| %>
          <%= render partial: 'show_ia', object: isa %>
          <!-- Divider Line -->
          <div class="form-group">
            <hr style="margin:4px"/>  
          </div>
        <%- end %>
      <%- end -%>
      <div class="form-group">
        <div class="col-sm-offset-3 col-sm-2">
          <%= link_to t( 'button_label.edit' ), edit_isr_interface_path( @isr_interface ), class: 'btn btn-lg btn-block btn-default' %>
        </div>
        <div class="col-sm-2">
          <%= link_to t( 'button_label.all' ), isr_interface_details_path( @isr_interface ), class: 'btn btn-lg btn-block btn-default' %>
        </div>
        <div class="col-sm-2">
          <%= link_to t( 'button_label.go_to_index' ), isr_interfaces_path, class: 'btn btn-lg btn-block btn-default' %>
        </div>
      </div>
    <% end %>
  </div>
</div>
