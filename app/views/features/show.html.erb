<%- page_title %>
<div class="container">
  <%= breadcrumbs %>
  <%= form_title %>
  <div class="form-horizontal" role="form">
    <%= form_for @feature do |f| %>
      <%= render partial: 'shared/notice' %>
      <%= render partial: 'shared/alert' %>
      <div class="form-group">
        <%= f.label :id, class: 'col-sm-3 control-label' %>
        <div class="col-sm-2">
          <%= display_value f.object.to_id %>
        </div>
      </div>
      <div class="form-group">
        <%= f.label :code, class: 'col-sm-3 control-label' %>
        <div class="col-sm-2">
          <%= display_value f.object.code %>
        </div>
      </div>
      <div class="form-group">
        <%= f.label :label, class: 'col-sm-3 control-label' %>
        <div class="col-sm-4">
          <%= display_value f.object.label %>
        </div>
      </div>
      <div class="form-group">
        <%= f.label :feature_category_id, class: 'col-sm-3 control-label' %>
        <div class="col-sm-3">
          <%= display_value f.object.feature_category_with_id %>
        </div>
      </div>
      <div class="form-group">
        <%= f.label :seqno, class: 'col-sm-3 control-label' %>
        <div class="col-sm-1">
          <%= display_value f.object.seqno %>
        </div>
      </div>
      <div class="form-group">
        <%= f.label :access_level, class: 'col-sm-3 control-label' %>
        <div class="col-sm-2">
          <%= display_value f.object.access_level_label %>
        </div>
      </div>
      <div class="form-group">
        <%= f.label :control_level, class: 'col-sm-3 control-label' %>
        <div class="col-sm-2">
          <%= display_value f.object.control_level_label %>
        </div>
      </div>
      <div class="form-group">
        <%= f.label :no_workflows, class: 'col-sm-3 control-label' %>
        <div class="col-sm-2">
          <%= display_value f.object.no_workflows %>
        </div>
      </div>
      <div class="form-group">
        <div class="col-sm-offset-3 col-sm-2">
          <%= link_to t( 'button_label.edit' ), edit_feature_path( @feature ), class: 'btn btn-lg btn-block btn-default' %>
        </div>
        <div class="col-sm-2">
          <%= link_to t( 'button_label.go_to_index' ), features_path, class: 'btn btn-lg btn-block btn-default' %>
        </div>
      </div>
    <% end %>
  </div>
</div>
