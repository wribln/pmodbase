      <div class="form-group">
        <%= form.label :id, class: "col-sm-3 control-label" %>
        <div class="col-sm-1">
          <%= display_value form.object.id %>
        </div>
      </div>
      <div class="form-group">
        <%= form.label :label, class: "col-sm-3 control-label" %>
        <div class="col-sm-4">
          <%= form.text_field :label, class: "form-control" %>
        </div>
      </div>
      <div class="form-group">
        <%= form.label :r_group_id, class: "col-sm-3 control-label" %>
        <div class="col-sm-6">
          <%= form.select :r_group_id, @r_group_selection, { prompt: t( '.g_prompt' )},{ class: 'form-control', required: true }%>
        </div>
      </div>
      <div class="form-group">
        <%= form.label :o_group_id, class: "col-sm-3 control-label" %>
        <div class="col-sm-6">
          <%= form.collection_select( :o_group_id, Group.active_only, :id, :code_and_label, { include_blank: true }, { class: 'form-control' })%>
        </div>
      </div>

