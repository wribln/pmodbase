<%- page_title %>
<div class="container">
  <%= breadcrumbs %>
  <%= form_title_w_link( @pcp_subject.subject_title, pcp_subject_path( @pcp_subject )) %>
  <div class="form-horizontal" role="form">
    <%= form_for @pcp_item, url: pcp_subject_pcp_items_path( @pcp_subject ) do |f| %>
      <%= render partial: 'shared/errors', object: @pcp_item.errors %>
      <%= render partial: 'form', object: f %>
      <div class="form-group">
        <div class="col-sm-offset-3 col-sm-2">
          <%= f.submit class: 'btn btn-lg btn-block btn-primary' %>
        </div>
        <div class="col-sm-2">
          <%= link_to t( 'button_label.cancel_to_index' ), pcp_subject_pcp_items_path( @pcp_subject ), class: 'btn btn-lg btn-block btn-default' %>
        </div>
      <div>
    <% end %>
  </div>
</div>
