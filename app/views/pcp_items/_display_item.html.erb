      <%= fields_for :pcp_item, display_item do |f| %>
        <div class="form-group">
          <%= f.label :seqno, class: "col-sm-3 control-label" %>
          <div class="col-sm-1">
            <%= display_value display_item.seqno %>
          </div>
          <%= f.label :pcp_step_id, t( 'pcp_items.pcp_step' ), class: "col-sm-3 control-label" %>
          <div class="col-sm-2">
            <%= display_value display_item.pcp_step.try :step_label %>
          </div>
        </div>
        <div class="form-group">
          <%= f.label :item_assmnt, class: "col-sm-3 control-label" %>
          <div class="col-sm-2">
            <%= display_value PcpItem.assessment_label( display_item.item_assmnt ) %>
          </div>
          <%= f.label :author, t( 'pcp_items.author' ), class: "col-sm-2 control-label" %>
          <div class="col-sm-2">
            <%= display_value display_item.author %>
          </div>
        </div>
        <div class="form-group">
          <%= f.label :reference, class: "col-sm-3 control-label" %>
          <div class="col-sm-6">
            <%= display_value display_item.reference %>
          </div>
        </div>
        <div class="form-group">
          <%= f.label :description, class: "col-sm-3 control-label" %>
          <div class="col-sm-6">
            <%= display_lines display_item.description %>
          </div>
        </div>
        <div class="form-group">
          <%= f.label :assessment, t( 'pcp_items.first_assessment' ), class: "col-sm-3 control-label" %>
          <div class="col-sm-2">
            <%= display_value PcpItem.assessment_label( display_item.assessment ) %>
          </div>
        </div>
      <%- end -%>
