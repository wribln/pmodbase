<%- page_title %>
<div class="container">
  <%= breadcrumbs %>
  <%= form_title %>
  <div class="form-horizontal" role="form">
    <%= form_for @phase_code do |pc| %>
      <%= render partial: 'shared/notice' %>
      <div class="form-group">
        <%= pc.label :id, class: 'col-sm-3 control-label' %>
        <div class="col-sm-1">
          <%= pc.text_field :id, class: 'form-control', readonly: true %>
        </div>
      </div>
      <div class="form-group">
        <%= pc.label :code, class: 'col-sm-3 control-label' %>
        <div class="col-sm-2">
          <%= pc.text_field :code, class: 'form-control', readonly: true %>
        </div>
      </div>
      <div class="form-group">
        <%= pc.label :label, class: 'col-sm-3 control-label' %>
        <div class="col-sm-5">
          <%= pc.text_field :label, class: 'form-control', readonly: true %>
        </div>
      </div>
      <div class="form-group">
        <%= pc.label :acro, class: 'col-sm-3 control-label' %>
        <div class="col-sm-2">
          <%= pc.text_field :acro, class: 'form-control', readonly: true %>
        </div>
      </div>
      <div class="form-group">
        <%= pc.label :siemens_phase_id, class: 'col-sm-3 control-label' %>
        <div class="col-sm-2">
          <%= pc.text_field :siemens_phase_id, class: 'form-control', readonly: true %>
        </div>
      </div>
      <div class="form-group">
        <%= pc.label :level, class: 'col-sm-3 control-label' %>
        <div class="col-sm-1">
          <%= pc.text_field :level, class: 'form-control', readonly: true %>
        </div>
      </div>
      <div class="form-group">
        <div class="col-sm-offset-3 col-sm-2">
          <%= link_to t( 'button_label.edit' ), edit_phase_code_path( @phase_code ), class: 'btn btn-lg btn-block btn-default' %>
        </div>
        <div class="col-sm-2">
          <%= link_to t( 'button_label.goto_to_list' ), phase_codes_path, class: 'btn btn-lg btn-block btn-default' %>
        </div>
      </div>
    <% end %>
  </div>
</div>

  