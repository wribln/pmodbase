<%- page_title %>
<div class="container">
  <%= breadcrumbs %>
  <%= form_title %>
  <div class="form-horizontal" role="form">
    <%= form_for @phase_code do |pc| %>
      <%= render partial: 'shared/notice' %>
      <%= render partial: 'shared/errors', object: @phase_code.errors %>
      <%= render partial: 'form', object: pc %>
      <div class="form-group">
        <div class="col-sm-offset-3 col-sm-2">
          <%= pc.submit class: 'btn btn-lg btn-block btn-primary' %>
        </div>
        <div class="col-sm-2">
          <%= link_to t( 'button_label.goto_to_list' ), phase_codes_path, class: 'btn btn-lg btn-block btn-default' %>
        </div>
      </div>
    <% end %>
  </div>
</div>