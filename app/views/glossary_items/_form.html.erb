      <div class="form-group">
        <%= form.label :id, class: 'col-sm-3 control-label' %>
        <div class="col-sm-2">
          <%= display_value form.object.to_id %>
        </div>
      </div>
      <div class="form-group">
        <%= form.label :term, class: 'col-sm-3 control-label' %>
        <div class="col-sm-3">
          <%= form.text_field :term, class: 'form-control', required: true %>
        </div>
      </div>
      <div class="form-group">
        <%= form.label :code, class: 'col-sm-3 control-label' %>
        <div class="col-sm-1">
          <%= form.text_field :code, class: 'form-control' %>
        </div>
      </div>
      <div class="form-group">
        <%= form.label :description, class: 'col-sm-3 control-label' %>
        <div class="col-sm-6">
          <%= form.text_area :description, class: 'form-control', cols: DEFAULT_COLS_TEXTAREA, rows: DEFAULT_ROWS_TEXTAREA %>
        </div>
      </div>
      <div class="form-group">
        <%= form.label :reference_id, t( '.cfr_record_id' ), class: 'col-sm-3 control-label' %>
        <div class="col-sm-2">
          <%= form.text_field :cfr_record_id, class: 'form-control' %>
        </div>
        <div class="col-sm-2">
          <%= link_to t( '.cfr_record_link' ), cfr_records_path, class: 'btn btn-sm btn-block btn-default', target: '_blank' %>
        </div>
      </div>

