<%- page_title %>
<div class="container">
  <%= breadcrumbs %>
  <%= form_title %>
  <div class="form-horizontal" role="form">
    <%= form_for @glossary_item do |gi| %>
      <%= render partial: 'shared/errors', object: @glossary_item.errors %>
      <%= render partial: 'form', object: gi %>
      <div class="form-group">
        <div class="col-sm-offset-3 col-sm-2">
          <%= gi.submit class: 'btn btn-lg btn-block btn-primary' %>
        </div>
        <div class="col-sm-2">
          <%= link_to t( 'button_label.cancel' ), glossary_item_path( @glossary_item ), class: 'btn btn-lg btn-block btn-default' %>
        </div>
      </div>
    <% end %>
  </div>
</div>