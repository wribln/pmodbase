<%- page_title %>
<div class="container">
  <%= breadcrumbs %>
  <%= form_title %>
  <div class="form-horizontal" role="form">
    <%= form_for @glossary_item do |gi| %>
      <%= render partial: 'shared/notice' %>
      <div class="form-group">
        <%= gi.label :id, class: 'col-sm-3 control-label' %>
        <div class="col-sm-2">
          <%= display_value gi.object.to_id %>
        </div>
      </div>
      <div class="form-group">
        <%= gi.label :term, class: 'col-sm-3 control-label' %>
        <div class="col-sm-3">
          <%= display_value gi.object.term %>
        </div>
      </div>
      <div class="form-group">
        <%= gi.label :code, class: 'col-sm-3 control-label' %>
        <div class="col-sm-2">
          <%= display_value gi.object.code %>
        </div>
      </div>
      <div class="form-group">
        <%= gi.label :description, class: 'col-sm-3 control-label' %>
        <div class="col-sm-6">
          <%= display_lines gi.object.description %>
        </div>
      </div>
      <%= render partial: 'shared/show_cfr', locals: { fbo: gi }%>
      <div class="form-group">
        <div class="col-sm-offset-3 col-sm-2">
          <%= link_to t( 'button_label.edit' ), edit_glossary_item_path( @glossary_item ), class: 'btn btn-lg btn-block btn-default' %>
        </div>
        <div class="col-sm-2">
          <%= link_to t( 'button_label.go_to_index' ), glossary_items_path, class: 'btn btn-lg btn-block btn-default' %>
        </div>
      </div>
    <% end %>
  </div>
</div>
