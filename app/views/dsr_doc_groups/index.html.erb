<%- page_title %>
<div class="container">
  <%= breadcrumbs %>
  <%= form_title %>
  <div class="table-responsive col-sm-10">
    <table class="table table-striped table-bordered">
      <thead>
        <tr>
          <th class="col-sm-1"><%= DsrDocGroup.human_attribute_name( :id    ) %></th>
          <th class="col-sm-2"><%= DsrDocGroup.human_attribute_name( :code  ) %></th>
          <th class="col-sm-4"><%= DsrDocGroup.human_attribute_name( :title ) %></th>
          <th class="col-sm-2"><%= DsrDocGroup.human_attribute_name( :group_id ) %></th>
          <th class="col-sm-1 hidden-print"><%= t( 'action_title.header' )%></th>
        </tr>
      </thead>
      <tbody>
      <% if @dsr_doc_groups.length.zero? %>
        <%= render partial: 'shared/index_empty_row', locals:{ columns: 4, with_link: true }%>
      <% else %>
        <% @dsr_doc_groups.each do |dsr_doc_group| %>
          <tr>
            <td><%= dsr_doc_group.to_id %></td>
            <td><%= dsr_doc_group.code %></td>
            <td><%= dsr_doc_group.title %></td>
            <td><%= dsr_doc_group.group_code %></td>
            <td><%= render partial: 'shared/actions', object: dsr_doc_group %></td>
          </tr>
        <% end %>
      <% end %>
      </tbody>
    </table>
    <%= render partial: 'shared/footer' %>
  </div>
</div>
