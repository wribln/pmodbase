<%- page_title %>
<div class="container">
  <%= breadcrumbs %>
  <%= form_title %>
  <div class="form-horizontal" role="form">
    <%= form_for @address do |a| %>
      <%= render partial: 'shared/notice' %>
      <div class="form-group">
        <%= a.label :id, class: 'col-sm-3 control-label' %>
        <div class="col-sm-2">
          <%= a.text_field :id, class: 'form-control', readonly: true %>
        </div>
      </div>
      <div class="form-group">
        <%= a.label :label, class: 'col-sm-3 control-label' %>
        <div class="col-sm-4">
          <%= a.text_field :label, class: 'form-control', readonly: true %>
        </div>
      </div>
      <div class="form-group">
        <%= a.label :street_address, class: 'col-sm-3 control-label' %>
        <div class="col-sm-4">
          <%= a.text_area :street_address, cols: DEFAULT_COLS_TEXTAREA, rows: DEFAULT_ROWS_TEXTAREA, class: 'form-control', readonly: true %>
        </div>
      </div>
      <div class="form-group">
        <%= a.label :postal_address, class: 'col-sm-3 control-label' %>
        <div class="col-sm-4">
          <%= a.text_area :postal_address, cols: DEFAULT_COLS_TEXTAREA, rows: DEFAULT_ROWS_TEXTAREA, class: 'form-control', readonly: true %>
        </div>
      </div>
      <div class="form-group">
        <div class="col-sm-offset-3 col-sm-2">
          <%= link_to t( 'button_label.edit' ), edit_address_path(@address), class: 'btn btn-lg btn-block btn-default' %>
        </div>
        <div class="col-sm-2">
          <%= link_to t( 'button_label.goto_to_list' ), addresses_path, class: 'btn btn-lg btn-block btn-default' %>
        </div>
      </div>
    <% end %>
  </div>
</div>
