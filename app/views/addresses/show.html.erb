<%- page_title %>
<div class="container">
  <%= breadcrumbs %>
  <%= form_title %>
  <div class="form-horizontal" role="form">
    <%= form_for @address do |a| %>
      <%= render partial: 'shared/notice' %>
      <div class="form-group">
        <%= a.label :id, class: 'col-sm-3 control-label' %>
        <div class="col-sm-2">
          <%= display_value a.object.to_id %>
        </div>
      </div>
      <div class="form-group">
        <%= a.label :label, class: 'col-sm-3 control-label' %>
        <div class="col-sm-4">
          <%= display_value a.object.label %>
        </div>
      </div>
      <div class="form-group">
        <%= a.label :street_address, class: 'col-sm-3 control-label' %>
        <div class="col-sm-4">
          <%= display_lines a.object.street_address %>
        </div>
      </div>
      <div class="form-group">
        <%= a.label :postal_address, class: 'col-sm-3 control-label' %>
        <div class="col-sm-4">
          <%= display_lines a.object.postal_address %>
        </div>
      </div>
      <div class="form-group">
        <div class="col-sm-offset-3 col-sm-2">
          <%= link_to t( 'button_label.edit' ), edit_address_path(@address), class: 'btn btn-lg btn-block btn-default' %>
        </div>
        <div class="col-sm-2">
          <%= link_to t( 'button_label.go_to_index' ), addresses_path, class: 'btn btn-lg btn-block btn-default' %>
        </div>
      </div>
    <% end %>
  </div>
</div>
