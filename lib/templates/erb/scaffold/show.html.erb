<%%- page_title %>
<div class="container">
  <%%= breadcrumbs %>
  <%%= form_title %>
  <div class="form-horizontal" role="form">
    <%%= form_for @<%= singular_table_name %> do |f| %>
      <%%= render partial: 'shared/notice' %>
      <div class="form-group">
        <%%= f.label :id, class: 'col-sm-3 control-label' %>
        <div class="col-sm-2">
          <%%= display_value f.object.to_id %>
        </div>
      </div>
<% attributes.each do |attribute| -%>
      <div class="form-group">
        <%%= f.label :<%= attribute.name %>, class: 'col-sm-3 control-label' %>
        <div class="col-sm-4">
          <%%= display_value f.object.<%= attribute.name %> %>
        </div>
      </div>
<% end -%>
      <div class="form-group">
        <div class="col-sm-offset-3 col-sm-2">
          <%%= link_to t( 'button_label.edit' ), edit_<%= singular_table_name %>_path( @<%= singular_table_name %> ), class: 'btn btn-lg btn-block btn-default' %>
        </div>
        <div class="col-sm-2">
          <%%= link_to t( 'button_label.go_to_index' ), <%= plural_table_name %>_path, class: 'btn btn-lg btn-block btn-default' %>
        </div>
      </div>
    <%% end %>
  </div>
</div>
