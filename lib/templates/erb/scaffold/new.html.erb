<%%- page_title %>
<div class="container">
  <%%= breadcrumbs %>
  <%%= form_title %>
  <div class="form-horizontal" role="form">
    <%%= form_for @<%= singular_table_name %> do |f| %>
      <%%= render partial: 'shared/errors', object: @<%= singular_table_name %>.errors %>
      <%%= render partial: 'form', object: f %>
      <div class="form-group">
        <div class="col-sm-offset-3 col-sm-2">
          <%%= f.submit class: "btn btn-lg btn-block btn-primary" %>
        </div>
        <div class="col-sm-2">
          <%%= link_to t( 'button_label.goto_to_list' ), <%= plural_table_name %>_path, class: "btn btn-lg btn-block btn-default" %>
        </div>
      <div>
    <%% end %>
  </div>
</div>
